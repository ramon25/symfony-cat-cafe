{% extends 'base.html.twig' %}

{% block title %}{{ cat.name }} - Whiskers & Wonders Cat Cafe{% endblock %}

{% block body %}
<div class="max-w-2xl mx-auto">
    <!-- Back Button -->
    <a href="{{ path('app_home') }}" class="inline-flex items-center text-orange-600 dark:text-orange-400 hover:text-orange-700 dark:hover:text-orange-300 mb-6">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Back to all cats
    </a>

    {% if cat.adopted %}
    <div class="bg-green-100 dark:bg-green-900/50 border border-green-400 dark:border-green-600 text-green-700 dark:text-green-300 rounded-lg p-4 mb-6 flex items-center">
        <span class="text-2xl mr-3">üè†</span>
        <div>
            <p class="font-bold">This cat has found their forever home!</p>
            <p class="text-sm">Adopted on {{ cat.adoptedAt|date('F j, Y') }}</p>
        </div>
    </div>
    {% endif %}

    {% if not cat.inCafe and not cat.adopted %}
    <div class="bg-blue-100 dark:bg-blue-900/50 border border-blue-400 dark:border-blue-600 text-blue-700 dark:text-blue-300 rounded-lg p-4 mb-6 flex items-center">
        <span class="text-2xl mr-3">{{ cat.locationEmoji }}</span>
        <div>
            <p class="font-bold">{{ cat.name }} is currently out exploring!</p>
            <p class="text-sm">They'll be back at the cafe soon. Check back later to interact with them.</p>
        </div>
    </div>
    {% endif %}

    <!-- Cat Profile Card -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg overflow-hidden transition-colors duration-300">
        <!-- Compact Header with AI Image -->
        <div class="bg-gradient-to-r from-orange-400 to-amber-400 dark:from-orange-600 dark:to-amber-600 p-6"
             data-controller="cat-image"
             data-cat-image-image-url-value="{{ path('app_api_cat_image', {id: cat.id}) }}"
             data-cat-image-generate-url-value="{{ path('app_api_cat_image_generate', {id: cat.id}) }}"
             data-cat-image-cat-name-value="{{ cat.name }}"
             data-cat-image-cat-emoji-value="{{ cat.moodEmoji }}">

            <div class="flex items-center gap-6">
                <!-- Cat Image/Emoji -->
                <div class="relative flex-shrink-0">
                    <div data-cat-image-target="loading" class="hidden">
                        <div class="w-24 h-24 rounded-full bg-white/20 flex items-center justify-center">
                            <svg class="animate-spin w-6 h-6 text-white" fill="none" viewBox="0 0 24 24">
                                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"></path>
                            </svg>
                        </div>
                    </div>
                    <div data-cat-image-target="placeholder" class="{% if cat.hasAiImage %}hidden{% endif %}">
                        <span class="text-6xl block">{{ cat.moodEmoji }}</span>
                    </div>
                    <img data-cat-image-target="image"
                         {% if cat.hasAiImage %}src="{{ cat.aiImageDataUrl }}"{% endif %}
                         alt="{{ cat.name }}'s AI Portrait"
                         class="{% if not cat.hasAiImage %}hidden{% endif %} w-24 h-24 rounded-full object-cover border-3 border-white/30 shadow-lg">
                    <p data-cat-image-target="error" class="hidden text-white/80 text-xs mt-1"></p>
                </div>

                <!-- Cat Info -->
                <div class="flex-1 text-white">
                    <h1 class="text-3xl font-bold">{{ cat.name }}</h1>
                    <p class="text-orange-100">{{ cat.breed }}</p>
                    <div class="flex items-center gap-4 mt-2 text-sm text-orange-100">
                        <span>üéÇ {{ cat.age }} yrs</span>
                        <span>üé® {{ cat.color }}</span>
                        <span>{{ cat.moodEmoji }} {{ cat.mood|capitalize }}</span>
                    </div>
                </div>

                <!-- Image Actions -->
                <div class="flex-shrink-0">
                    {% if cat.hasAiImage %}
                    <button type="button"
                            data-cat-image-target="regenerateBtn"
                            data-action="click->cat-image#regenerate"
                            class="bg-white/20 hover:bg-white/30 text-white text-xs py-1.5 px-3 rounded-lg transition-all"
                            title="Regenerate AI portrait">
                        üîÑ
                    </button>
                    {% else %}
                    <button type="button"
                            data-cat-image-target="generateBtn"
                            data-action="click->cat-image#generate"
                            class="bg-white/20 hover:bg-white/30 text-white text-xs py-1.5 px-3 rounded-lg transition-all flex items-center gap-1">
                        <span>üé®</span>
                        <span>AI Portrait</span>
                    </button>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="p-6 space-y-6">
            {% if cat.description %}
            <div class="p-4 bg-orange-50 dark:bg-orange-900/30 rounded-lg">
                <p class="text-gray-600 dark:text-gray-300">{{ cat.description|format_ai_text }}</p>
            </div>
            {% endif %}

            <!-- Live Component: Cat Stats & Interactions (moved up for prominence) -->
            {{ component('CatInteraction', { catId: cat.id }) }}

            <!-- AI Features Section with Tabs -->
            <div class="border-t dark:border-gray-700 pt-6" data-controller="tabs" data-tabs-active-class="border-purple-500 text-purple-600 dark:text-purple-400" data-tabs-inactive-class="border-transparent text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-300">
                <h3 class="font-bold text-gray-800 dark:text-white mb-4 flex items-center">
                    <span class="text-xl mr-2">‚ú®</span>
                    AI Features
                    <span class="ml-2 text-xs bg-gradient-to-r from-purple-500 to-pink-500 text-white px-2 py-0.5 rounded-full">AI Powered</span>
                </h3>

                <!-- Tab Navigation -->
                <div class="border-b dark:border-gray-700 mb-4">
                    <nav class="flex gap-1 -mb-px" role="tablist">
                        <button type="button" role="tab" data-tabs-target="tab" data-action="click->tabs#select"
                                class="py-2 px-4 text-sm font-medium border-b-2 transition-colors rounded-t-lg border-purple-500 text-purple-600 dark:text-purple-400"
                                aria-selected="true">
                            üí≠ Thoughts
                        </button>
                        <button type="button" role="tab" data-tabs-target="tab" data-action="click->tabs#select"
                                class="py-2 px-4 text-sm font-medium border-b-2 transition-colors rounded-t-lg border-transparent text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-300">
                            ‚ú® Personality
                        </button>
                        <button type="button" role="tab" data-tabs-target="tab" data-action="click->tabs#select"
                                class="py-2 px-4 text-sm font-medium border-b-2 transition-colors rounded-t-lg border-transparent text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-300">
                            üîÆ Fortune
                        </button>
                        <button type="button" role="tab" data-tabs-target="tab" data-action="click->tabs#select"
                                class="py-2 px-4 text-sm font-medium border-b-2 transition-colors rounded-t-lg border-transparent text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-300">
                            üåê Website
                        </button>
                    </nav>
                </div>

                <!-- Tab Panels -->
                <div class="tab-panels">
                    <!-- Mind Reader Panel -->
                    <div data-tabs-target="panel" role="tabpanel"
                         data-controller="ai-thought"
                         data-ai-thought-url-value="{{ path('app_api_cat_thought', {id: cat.id}) }}">
                        <div class="bg-gradient-to-r from-pink-50 to-purple-50 dark:from-pink-900/20 dark:to-purple-900/20 rounded-xl p-5">
                            <div class="flex items-start gap-4">
                                <div class="flex-shrink-0 w-12 h-12 bg-white dark:bg-gray-700 rounded-full flex items-center justify-center shadow-md">
                                    <span class="text-2xl" data-ai-thought-target="emoji">{{ cat.moodEmoji }}</span>
                                </div>
                                <div class="flex-1">
                                    <div data-ai-thought-target="loading" class="hidden">
                                        <div class="animate-pulse flex items-center gap-2 text-purple-400">
                                            <svg class="animate-spin w-4 h-4" fill="none" viewBox="0 0 24 24">
                                                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"></path>
                                            </svg>
                                            <span class="text-sm">Reading {{ cat.name }}'s mind...</span>
                                        </div>
                                    </div>
                                    <div data-ai-thought-target="content" class="hidden space-y-3">
                                        <div class="bg-white dark:bg-gray-700 rounded-2xl rounded-tl-none p-3 shadow-sm relative">
                                            <div class="absolute -left-2 top-0 w-3 h-3 bg-white dark:bg-gray-700 transform rotate-45"></div>
                                            <p data-ai-thought-target="thought" class="text-gray-700 dark:text-gray-200 italic relative z-10 text-sm"></p>
                                        </div>
                                        <div class="bg-gradient-to-r from-pink-100 to-purple-100 dark:from-pink-900/30 dark:to-purple-900/30 rounded-lg p-2">
                                            <p class="text-xs text-gray-600 dark:text-gray-300">
                                                <span class="font-medium text-purple-600 dark:text-purple-400">{{ bonding ? bonding.bondingEmoji : 'ü§ç' }} {{ cat.name }} says:</span>
                                                <span data-ai-thought-target="bondingMessage" class="italic"></span>
                                            </p>
                                        </div>
                                    </div>
                                    <div data-ai-thought-target="error" class="hidden">
                                        <p class="text-gray-500 dark:text-gray-400 italic text-sm">{{ cat.name }} is being mysterious right now...</p>
                                    </div>
                                    <button type="button"
                                            data-ai-thought-target="button"
                                            data-action="click->ai-thought#loadThought"
                                            class="mt-3 bg-gradient-to-r from-pink-500 to-purple-500 hover:from-pink-600 hover:to-purple-600 text-white font-medium py-2 px-4 rounded-lg transition-all flex items-center gap-2 shadow-md text-sm">
                                        <span>üß†</span>
                                        <span>Read {{ cat.name }}'s Mind</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Personality Panel -->
                    <div data-tabs-target="panel" role="tabpanel" class="hidden"
                         data-controller="ai-personality"
                         data-ai-personality-url-value="{{ path('app_api_cat_personality', {id: cat.id}) }}">
                        <div class="bg-gradient-to-r from-indigo-50 to-purple-50 dark:from-indigo-900/20 dark:to-purple-900/20 rounded-xl p-5">
                            {% if cat.aiPersonalityProfile %}
                            <div class="space-y-4">
                                <div class="bg-white/50 dark:bg-gray-800/50 rounded-lg p-4">
                                    <p class="text-gray-700 dark:text-gray-300 whitespace-pre-line text-sm">{{ cat.aiPersonalityProfile|format_ai_text }}</p>
                                </div>
                                {% if cat.aiFunFacts %}
                                <div>
                                    <h4 class="font-bold text-gray-800 dark:text-white text-sm mb-2 flex items-center">
                                        <span class="mr-2">üéØ</span> Fun Facts
                                    </h4>
                                    <ul class="space-y-1 text-sm text-gray-600 dark:text-gray-300">
                                        {% for fact in cat.aiFunFacts %}
                                        <li class="flex items-start gap-2"><span class="text-purple-500">‚Ä¢</span><span>{{ fact|format_ai_text }}</span></li>
                                        {% endfor %}
                                    </ul>
                                </div>
                                {% endif %}
                                <div class="flex items-center justify-between text-xs text-gray-400 dark:text-gray-500">
                                    {% if cat.aiGeneratedAt %}
                                    <span>Generated: {{ cat.aiGeneratedAt|date('M j, Y') }}</span>
                                    {% endif %}
                                    <button type="button"
                                            data-ai-personality-target="button"
                                            data-action="click->ai-personality#regenerate"
                                            class="text-purple-600 dark:text-purple-400 hover:underline flex items-center gap-1">
                                        <span>üîÑ</span> Regenerate
                                    </button>
                                </div>
                            </div>
                            {% else %}
                            <div data-ai-personality-target="loading" class="hidden py-6">
                                <div class="flex items-center justify-center gap-2 text-purple-400">
                                    <svg class="animate-spin w-5 h-5" fill="none" viewBox="0 0 24 24">
                                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"></path>
                                    </svg>
                                    <span class="text-sm">Generating personality profile...</span>
                                </div>
                            </div>
                            <div data-ai-personality-target="content" class="hidden space-y-4">
                                <div class="bg-white/50 dark:bg-gray-800/50 rounded-lg p-4">
                                    <p data-ai-personality-target="profile" class="text-gray-700 dark:text-gray-300 whitespace-pre-line text-sm"></p>
                                </div>
                                <div>
                                    <h4 class="font-bold text-gray-800 dark:text-white text-sm mb-2 flex items-center">
                                        <span class="mr-2">üéØ</span> Fun Facts
                                    </h4>
                                    <ul data-ai-personality-target="facts" class="space-y-1 text-sm text-gray-600 dark:text-gray-300"></ul>
                                </div>
                                <div class="flex items-center justify-between text-xs text-gray-400 dark:text-gray-500">
                                    <span data-ai-personality-target="generatedAt" class="hidden"></span>
                                    <button type="button"
                                            data-ai-personality-target="button"
                                            data-action="click->ai-personality#regenerate"
                                            class="text-purple-600 dark:text-purple-400 hover:underline flex items-center gap-1">
                                        <span>üîÑ</span> Regenerate
                                    </button>
                                </div>
                            </div>
                            <div data-ai-personality-target="error" class="hidden py-4 text-center text-gray-500 dark:text-gray-400 text-sm">
                                Couldn't generate profile right now. Try again later!
                            </div>
                            <div class="text-center">
                                <button type="button"
                                        data-ai-personality-target="button"
                                        data-action="click->ai-personality#loadPersonality"
                                        class="bg-gradient-to-r from-indigo-500 to-purple-500 hover:from-indigo-600 hover:to-purple-600 text-white font-medium py-2 px-4 rounded-lg transition-all flex items-center gap-2 mx-auto shadow-md text-sm">
                                    <span>‚ú®</span>
                                    <span>Generate AI Profile</span>
                                </button>
                            </div>
                            {% endif %}
                        </div>
                    </div>

                    <!-- Fortune Cookie Panel -->
                    <div data-tabs-target="panel" role="tabpanel" class="hidden"
                         data-controller="wisdom"
                         data-wisdom-url-value="{{ path('app_cat_wisdom', {id: cat.id}) }}">
                        <div class="bg-gradient-to-r from-purple-50 to-indigo-50 dark:from-purple-900/30 dark:to-indigo-900/30 rounded-xl p-5 text-center">
                            <p class="text-gray-600 dark:text-gray-300 mb-4 text-sm">Ask {{ cat.name }} to share their ancient feline wisdom...</p>
                            <button type="button"
                                    data-wisdom-target="button"
                                    data-action="click->wisdom#getWisdom"
                                    class="bg-gradient-to-r from-purple-500 to-indigo-500 hover:from-purple-600 hover:to-indigo-600 text-white font-bold py-2 px-4 rounded-lg transition-all flex items-center gap-2 mx-auto shadow-md text-sm">
                                <span>üîÆ</span>
                                <span>Ask for Wisdom</span>
                            </button>
                            <div data-wisdom-target="display" class="hidden mt-4 space-y-2">
                                <div class="text-3xl" data-wisdom-target="emoji">{{ cat.moodEmoji }}</div>
                                <p class="text-gray-600 dark:text-gray-300 italic text-sm" data-wisdom-target="prefix"></p>
                                <p class="text-lg font-medium text-purple-800 dark:text-purple-300" data-wisdom-target="wisdom"></p>
                                <div class="text-xs text-gray-500 dark:text-gray-400" data-wisdom-target="lucky"></div>
                            </div>
                        </div>
                    </div>

                    <!-- Personal Website Panel -->
                    <div data-tabs-target="panel" role="tabpanel" class="hidden"
                         data-controller="cat-website"
                         data-cat-website-regenerate-url-value="{{ path('app_api_cat_website_regenerate', {id: cat.id}) }}"
                         data-cat-website-view-url-value="{{ path('app_cat_website', {id: cat.id}) }}">
                        <div class="bg-gradient-to-r from-cyan-50 to-blue-50 dark:from-cyan-900/20 dark:to-blue-900/20 rounded-xl p-5">
                            <p class="text-gray-600 dark:text-gray-300 mb-4 text-center text-sm">
                                {{ cat.name }} has their own AI-generated personal website!
                            </p>
                            {% if cat.hasAiWebsite %}
                            <div class="text-center space-y-3">
                                <p class="text-xs text-gray-500 dark:text-gray-400">
                                    Layout: <span class="font-medium text-cyan-600 dark:text-cyan-400">{{ cat.aiWebsiteLayout }}</span>
                                </p>
                                <div class="flex justify-center gap-2">
                                    <a href="{{ path('app_cat_website', {id: cat.id}) }}"
                                       target="_blank"
                                       class="bg-gradient-to-r from-cyan-500 to-blue-500 hover:from-cyan-600 hover:to-blue-600 text-white font-medium py-2 px-4 rounded-lg transition-all flex items-center gap-2 shadow-md text-sm">
                                        <span>üåê</span>
                                        <span>Visit</span>
                                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                                        </svg>
                                    </a>
                                    <button type="button"
                                            data-cat-website-target="regenerateBtn"
                                            data-action="click->cat-website#regenerate"
                                            class="bg-white dark:bg-gray-700 text-cyan-600 dark:text-cyan-400 font-medium py-2 px-4 rounded-lg transition-all flex items-center gap-2 border border-cyan-200 dark:border-cyan-700 hover:bg-cyan-50 dark:hover:bg-cyan-900/30 text-sm">
                                        <span>üîÑ</span>
                                        <span>New Layout</span>
                                    </button>
                                </div>
                            </div>
                            {% else %}
                            <div class="text-center">
                                <a href="{{ path('app_cat_website', {id: cat.id}) }}"
                                   target="_blank"
                                   class="bg-gradient-to-r from-cyan-500 to-blue-500 hover:from-cyan-600 hover:to-blue-600 text-white font-medium py-2 px-4 rounded-lg transition-all inline-flex items-center gap-2 shadow-md text-sm">
                                    <span>‚ú®</span>
                                    <span>Generate & View</span>
                                </a>
                            </div>
                            {% endif %}
                            <div data-cat-website-target="loading" class="hidden mt-3">
                                <div class="flex items-center justify-center gap-2 text-cyan-500 text-sm">
                                    <svg class="animate-spin w-4 h-4" fill="none" viewBox="0 0 24 24">
                                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"></path>
                                    </svg>
                                    <span>Generating new layout...</span>
                                </div>
                            </div>
                            <div data-cat-website-target="success" class="hidden mt-3">
                                <div class="bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-300 rounded-lg p-2 text-center text-xs">
                                    New website generated! Refresh to see updates.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- AI Therapist Section (separate due to size) -->
            <div class="border-t dark:border-gray-700 pt-6"
                 data-controller="therapist"
                 data-therapist-url-value="{{ path('app_cat_therapy', {id: cat.id}) }}"
                 data-therapist-history-url-value="{{ path('app_cat_chat_history', {id: cat.id}) }}"
                 data-therapist-clear-url-value="{{ path('app_cat_chat_clear', {id: cat.id}) }}"
                 data-therapist-cat-name-value="{{ cat.name }}"
                 data-therapist-cat-emoji-value="{{ cat.moodEmoji }}">
                <h3 class="font-bold text-gray-800 dark:text-white mb-4 flex items-center">
                    <span class="text-xl mr-2">üß†</span>
                    Chat with Dr. {{ cat.name }}
                </h3>

                <div class="bg-white dark:bg-gray-700 rounded-xl overflow-hidden shadow-md border border-purple-100 dark:border-purple-900/50">
                    <!-- Chat Header (compact) -->
                    <div class="bg-gradient-to-r from-purple-500 via-pink-500 to-purple-600 px-4 py-3 flex items-center justify-between">
                        <div class="flex items-center">
                            <div class="w-10 h-10 rounded-full bg-white/20 flex items-center justify-center mr-3">
                                <span class="text-xl">{{ cat.moodEmoji }}</span>
                            </div>
                            <div>
                                <p class="text-white font-bold">Dr. {{ cat.name }}</p>
                                <div class="flex items-center gap-1.5">
                                    <span class="w-1.5 h-1.5 bg-green-400 rounded-full animate-pulse"></span>
                                    <p class="text-purple-100 text-xs">Online</p>
                                </div>
                            </div>
                        </div>
                        <button type="button"
                                data-therapist-target="clearBtn"
                                data-action="click->therapist#clearChat"
                                class="text-white/70 hover:text-white hover:bg-white/20 p-1.5 rounded-lg transition-all"
                                title="Clear chat history">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                            </svg>
                        </button>
                    </div>

                    <!-- Chat Messages (reduced height) -->
                    <div data-therapist-target="chatArea" class="h-72 overflow-y-auto bg-gradient-to-b from-purple-50/50 to-pink-50/50 dark:from-gray-800 dark:to-gray-800">
                        <div data-therapist-target="messages" class="p-4 space-y-3">
                        </div>
                        <div data-therapist-target="loading" class="hidden flex items-center justify-center py-6">
                            <div class="flex items-center gap-2 text-purple-400 text-sm">
                                <svg class="animate-spin w-4 h-4" fill="none" viewBox="0 0 24 24">
                                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"></path>
                                </svg>
                                <span>Loading chat...</span>
                            </div>
                        </div>
                    </div>

                    <!-- Chat Input (compact) -->
                    <form data-action="submit->therapist#sendMessage" class="border-t border-purple-100 dark:border-gray-600 p-3 bg-white dark:bg-gray-700">
                        <div class="flex gap-2">
                            <input type="text"
                                   data-therapist-target="input"
                                   data-action="keydown->therapist#handleKeydown"
                                   placeholder="Share what's on your mind..."
                                   class="flex-1 px-4 py-2 rounded-xl border border-purple-100 dark:border-gray-600 dark:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-purple-400 text-gray-700 dark:text-gray-200 placeholder-gray-400 dark:placeholder-gray-500 text-sm"
                                   autocomplete="off">
                            <button type="submit"
                                    data-therapist-target="submit"
                                    class="bg-gradient-to-r from-purple-500 to-pink-500 hover:from-purple-600 hover:to-pink-600 text-white px-4 py-2 rounded-xl transition-all shadow-md flex items-center gap-1.5 text-sm disabled:opacity-50 disabled:cursor-not-allowed">
                                <span>Send</span>
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
                                </svg>
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            {% if not cat.adopted %}
            <!-- Adoption Section (streamlined) -->
            <div class="border-t dark:border-gray-700 pt-6 space-y-4">
                {% if cat.fostered %}
                <div class="bg-green-100 dark:bg-green-900/50 border border-green-300 dark:border-green-700 rounded-lg p-3 flex items-center">
                    <span class="text-xl mr-2">üè°</span>
                    <div>
                        <p class="font-bold text-green-800 dark:text-green-200 text-sm">Fostering {{ cat.name }}</p>
                        <p class="text-xs text-green-600 dark:text-green-300">Since {{ cat.fosteredAt|date('M j, Y') }}</p>
                    </div>
                </div>
                {% endif %}

                <div class="flex gap-2">
                    {% if bonding is null or bonding.compatibilityScore is null %}
                    <a href="{{ path('app_cat_quiz', {id: cat.id}) }}"
                       class="flex-1 bg-gradient-to-r from-purple-500 to-pink-500 hover:from-purple-600 hover:to-pink-600 text-white font-bold py-3 px-4 rounded-lg transition-all flex items-center justify-center gap-2 shadow-md text-sm">
                        <span>üìù</span>
                        <span>Take Quiz</span>
                    </a>
                    {% else %}
                    <a href="{{ path('app_cat_quiz_result', {id: cat.id}) }}"
                       class="flex-1 bg-purple-100 dark:bg-purple-900/50 text-purple-700 dark:text-purple-300 font-bold py-3 px-4 rounded-lg transition-all flex items-center justify-center gap-2 border border-purple-200 dark:border-purple-700 text-sm">
                        <span>{{ bonding.compatibilityEmoji }}</span>
                        <span>{{ bonding.compatibilityScore }}% Match</span>
                    </a>
                    {% endif %}

                    <a href="{{ path('app_cat_journey', {id: cat.id}) }}"
                       class="flex-1 bg-orange-100 dark:bg-orange-900/50 text-orange-700 dark:text-orange-300 font-bold py-3 px-4 rounded-lg transition-all flex items-center justify-center gap-2 border border-orange-200 dark:border-orange-700 text-sm">
                        <span>üó∫Ô∏è</span>
                        <span>Journey</span>
                    </a>
                </div>

                {% if bonding and bonding.canAdopt %}
                <form action="{{ path('app_cat_adopt_new', {id: cat.id}) }}" method="POST">
                    <button type="submit"
                            onclick="return confirm('Are you ready to give {{ cat.name }} their forever home?')"
                            class="w-full bg-gradient-to-r from-orange-500 to-amber-500 hover:from-orange-600 hover:to-amber-600 text-white font-bold py-3 px-6 rounded-lg transition-all flex items-center justify-center gap-2 shadow-lg hover:shadow-xl">
                        <span class="text-xl">üè†</span>
                        <span>Adopt {{ cat.name }}!</span>
                    </button>
                </form>
                {% else %}
                <div class="bg-gray-100 dark:bg-gray-700 rounded-lg p-3 text-center">
                    <p class="text-gray-600 dark:text-gray-300 text-sm">
                        Keep bonding with {{ cat.name }} to unlock adoption.
                        <a href="{{ path('app_cat_journey', {id: cat.id}) }}" class="text-orange-600 dark:text-orange-400 hover:underline font-medium">View requirements</a>
                    </p>
                </div>
                {% endif %}
            </div>
            {% endif %}

            <!-- Meta Info -->
            <div class="text-center text-xs text-gray-400 dark:text-gray-500 pt-4 border-t dark:border-gray-700">
                Joined the cafe on {{ cat.createdAt|date('F j, Y') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
