{% extends 'base.html.twig' %}

{% block title %}{{ cat.name }} - Whiskers & Wonders Cat Cafe{% endblock %}

{% block body %}
<div class="max-w-2xl mx-auto">
    <!-- Back Button -->
    <a href="{{ path('app_home') }}" class="inline-flex items-center text-orange-600 dark:text-orange-400 hover:text-orange-700 dark:hover:text-orange-300 mb-6">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Back to all cats
    </a>

    {% if cat.adopted %}
    <div class="bg-green-100 dark:bg-green-900/50 border border-green-400 dark:border-green-600 text-green-700 dark:text-green-300 rounded-lg p-4 mb-6 flex items-center">
        <span class="text-2xl mr-3">üè†</span>
        <div>
            <p class="font-bold">This cat has found their forever home!</p>
            <p class="text-sm">Adopted on {{ cat.adoptedAt|date('F j, Y') }}</p>
        </div>
    </div>
    {% endif %}

    <!-- Cat Profile Card -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg overflow-hidden transition-colors duration-300">
        <!-- Header -->
        <div class="bg-gradient-to-r from-orange-400 to-amber-400 dark:from-orange-600 dark:to-amber-600 p-8 text-center">
            <span class="text-8xl mb-4 block">{{ cat.moodEmoji }}</span>
            <h1 class="text-4xl font-bold text-white">{{ cat.name }}</h1>
            <p class="text-orange-100 text-lg">{{ cat.breed }}</p>
        </div>

        <!-- Info -->
        <div class="p-6 space-y-6">
            <!-- Basic Info -->
            <div class="grid grid-cols-3 gap-4 text-center">
                <div class="p-4 bg-gray-50 dark:bg-gray-700 rounded-lg">
                    <p class="text-2xl">üéÇ</p>
                    <p class="font-bold text-gray-800 dark:text-white">{{ cat.age }} years</p>
                    <p class="text-sm text-gray-500 dark:text-gray-400">Age</p>
                </div>
                <div class="p-4 bg-gray-50 dark:bg-gray-700 rounded-lg">
                    <p class="text-2xl">üé®</p>
                    <p class="font-bold text-gray-800 dark:text-white">{{ cat.color }}</p>
                    <p class="text-sm text-gray-500 dark:text-gray-400">Color</p>
                </div>
                <div class="p-4 bg-gray-50 dark:bg-gray-700 rounded-lg">
                    <p class="text-2xl">{{ cat.moodEmoji }}</p>
                    <p class="font-bold text-gray-800 dark:text-white capitalize">{{ cat.mood }}</p>
                    <p class="text-sm text-gray-500 dark:text-gray-400">Mood</p>
                </div>
            </div>

            {% if cat.description %}
            <div class="p-4 bg-orange-50 dark:bg-orange-900/30 rounded-lg">
                <h3 class="font-bold text-gray-800 dark:text-white mb-2">About {{ cat.name }}</h3>
                <p class="text-gray-600 dark:text-gray-300">{{ cat.description }}</p>
            </div>
            {% endif %}

            <!-- AI Cat Mind Reader Section -->
            <div class="border-t dark:border-gray-700 pt-6"
                 data-controller="ai-thought"
                 data-ai-thought-url-value="{{ path('app_api_cat_thought', {id: cat.id}) }}">
                <h3 class="font-bold text-gray-800 dark:text-white mb-4 flex items-center">
                    <span class="text-2xl mr-2">üí≠</span>
                    {{ cat.name }}'s Thoughts
                    <span class="ml-2 text-xs bg-gradient-to-r from-purple-500 to-pink-500 text-white px-2 py-0.5 rounded-full">AI Powered</span>
                </h3>

                <div class="bg-gradient-to-r from-pink-50 to-purple-50 dark:from-pink-900/20 dark:to-purple-900/20 rounded-xl p-6">
                    <!-- Thought Bubble -->
                    <div class="relative">
                        <div class="flex items-start gap-4">
                            <div class="flex-shrink-0 w-16 h-16 bg-white dark:bg-gray-700 rounded-full flex items-center justify-center shadow-md">
                                <span class="text-4xl" data-ai-thought-target="emoji">{{ cat.moodEmoji }}</span>
                            </div>
                            <div class="flex-1">
                                <!-- Loading State -->
                                <div data-ai-thought-target="loading" class="hidden">
                                    <div class="animate-pulse flex items-center gap-2 text-purple-400">
                                        <svg class="animate-spin w-4 h-4" fill="none" viewBox="0 0 24 24">
                                            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"></path>
                                        </svg>
                                        <span class="text-sm">Reading {{ cat.name }}'s mind...</span>
                                    </div>
                                </div>

                                <!-- Content -->
                                <div data-ai-thought-target="content" class="hidden space-y-3">
                                    <!-- Thought -->
                                    <div class="bg-white dark:bg-gray-700 rounded-2xl rounded-tl-none p-4 shadow-sm relative">
                                        <div class="absolute -left-2 top-0 w-4 h-4 bg-white dark:bg-gray-700 transform rotate-45"></div>
                                        <p data-ai-thought-target="thought" class="text-gray-700 dark:text-gray-200 italic relative z-10"></p>
                                    </div>
                                    <!-- Bonding Message -->
                                    <div class="bg-gradient-to-r from-pink-100 to-purple-100 dark:from-pink-900/30 dark:to-purple-900/30 rounded-lg p-3">
                                        <p class="text-sm text-gray-600 dark:text-gray-300">
                                            <span class="font-medium text-purple-600 dark:text-purple-400">{{ cat.bondingEmoji }} {{ cat.name }} says:</span>
                                            <span data-ai-thought-target="bondingMessage" class="italic"></span>
                                        </p>
                                    </div>
                                </div>

                                <!-- Error State -->
                                <div data-ai-thought-target="error" class="hidden">
                                    <p class="text-gray-500 dark:text-gray-400 italic">{{ cat.name }} is being mysterious right now...</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Read Mind Button -->
                    <div class="mt-4 text-center">
                        <button type="button"
                                data-ai-thought-target="button"
                                data-action="click->ai-thought#loadThought"
                                class="bg-gradient-to-r from-pink-500 to-purple-500 hover:from-pink-600 hover:to-purple-600 text-white font-medium py-2 px-4 rounded-lg transition-all flex items-center justify-center gap-2 mx-auto shadow-md hover:shadow-lg text-sm">
                            <span class="text-lg">üß†</span>
                            <span>Read {{ cat.name }}'s Mind</span>
                        </button>
                    </div>
                </div>
            </div>

            <!-- AI Personality Profile Section -->
            <div class="border-t dark:border-gray-700 pt-6"
                 data-controller="ai-personality"
                 data-ai-personality-url-value="{{ path('app_api_cat_personality', {id: cat.id}) }}">
                <h3 class="font-bold text-gray-800 dark:text-white mb-4 flex items-center">
                    <span class="text-2xl mr-2">‚ú®</span>
                    AI Personality Profile
                    <span class="ml-2 text-xs bg-gradient-to-r from-purple-500 to-pink-500 text-white px-2 py-0.5 rounded-full">AI Powered</span>
                </h3>

                <div class="bg-gradient-to-r from-indigo-50 to-purple-50 dark:from-indigo-900/20 dark:to-purple-900/20 rounded-xl p-6">
                    <!-- Loading State -->
                    <div data-ai-personality-target="loading" class="hidden">
                        <div class="flex items-center justify-center py-8">
                            <div class="flex items-center gap-2 text-purple-400">
                                <svg class="animate-spin w-5 h-5" fill="none" viewBox="0 0 24 24">
                                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                                </svg>
                                <span>Generating personality profile...</span>
                            </div>
                        </div>
                    </div>

                    <!-- Content -->
                    <div data-ai-personality-target="content" class="hidden space-y-4">
                        <div class="bg-white/50 dark:bg-gray-800/50 rounded-lg p-4">
                            <p data-ai-personality-target="profile" class="text-gray-700 dark:text-gray-300 whitespace-pre-line"></p>
                        </div>

                        <!-- Fun Facts -->
                        <div>
                            <h4 class="font-bold text-gray-800 dark:text-white text-sm mb-2 flex items-center">
                                <span class="mr-2">üéØ</span> Fun Facts
                            </h4>
                            <ul data-ai-personality-target="facts" class="space-y-2 text-sm text-gray-600 dark:text-gray-300">
                            </ul>
                        </div>
                    </div>

                    <!-- Error State -->
                    <div data-ai-personality-target="error" class="hidden">
                        <div class="text-center py-4 text-gray-500 dark:text-gray-400">
                            <p>Couldn't generate profile right now. Try again later!</p>
                        </div>
                    </div>

                    <!-- Generate Button -->
                    <div class="mt-4 text-center">
                        <button type="button"
                                data-ai-personality-target="button"
                                data-action="click->ai-personality#loadPersonality"
                                class="bg-gradient-to-r from-indigo-500 to-purple-500 hover:from-indigo-600 hover:to-purple-600 text-white font-medium py-2 px-4 rounded-lg transition-all flex items-center justify-center gap-2 mx-auto shadow-md hover:shadow-lg text-sm">
                            <span class="text-lg">‚ú®</span>
                            <span>Generate AI Profile</span>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Live Component: Cat Stats & Interactions -->
            {{ component('CatInteraction', { catId: cat.id }) }}

            <!-- Cat Fortune Cookie Section -->
            <div class="border-t dark:border-gray-700 pt-6" data-controller="wisdom" data-wisdom-url-value="{{ path('app_cat_wisdom', {id: cat.id}) }}">
                <h3 class="font-bold text-gray-800 dark:text-white mb-4 flex items-center">
                    <span class="text-2xl mr-2">üîÆ</span>
                    Cat Fortune Cookie
                </h3>

                <div class="bg-gradient-to-r from-purple-50 to-indigo-50 dark:from-purple-900/30 dark:to-indigo-900/30 rounded-xl p-6 text-center">
                    <p class="text-gray-600 dark:text-gray-300 mb-4">Ask {{ cat.name }} to share their ancient feline wisdom with you...</p>

                    <button type="button"
                            data-wisdom-target="button"
                            data-action="click->wisdom#getWisdom"
                            class="bg-gradient-to-r from-purple-500 to-indigo-500 hover:from-purple-600 hover:to-indigo-600 text-white font-bold py-3 px-6 rounded-lg transition-all flex items-center justify-center space-x-2 mx-auto shadow-md hover:shadow-lg">
                        <span class="text-xl">üîÆ</span>
                        <span>Ask for Wisdom</span>
                    </button>

                    <!-- Wisdom Display (initially hidden) -->
                    <div data-wisdom-target="display" class="hidden mt-6 space-y-4">
                        <div class="text-4xl" data-wisdom-target="emoji">{{ cat.moodEmoji }}</div>
                        <p class="text-gray-600 dark:text-gray-300 italic" data-wisdom-target="prefix"></p>
                        <p class="text-xl font-medium text-purple-800 dark:text-purple-300" data-wisdom-target="wisdom"></p>
                        <div class="text-sm text-gray-500 dark:text-gray-400 mt-4" data-wisdom-target="lucky"></div>
                    </div>
                </div>
            </div>

            <!-- AI Cat Therapist Section -->
            <div class="border-t dark:border-gray-700 pt-6"
                 data-controller="therapist"
                 data-therapist-url-value="{{ path('app_cat_therapy', {id: cat.id}) }}"
                 data-therapist-history-url-value="{{ path('app_cat_chat_history', {id: cat.id}) }}"
                 data-therapist-clear-url-value="{{ path('app_cat_chat_clear', {id: cat.id}) }}"
                 data-therapist-cat-name-value="{{ cat.name }}"
                 data-therapist-cat-emoji-value="{{ cat.moodEmoji }}">
                <h3 class="font-bold text-gray-800 dark:text-white mb-4 flex items-center">
                    <span class="text-2xl mr-2">üß†</span>
                    AI Cat Therapist
                    <span class="ml-2 text-xs bg-gradient-to-r from-purple-500 to-pink-500 text-white px-2 py-0.5 rounded-full">AI Powered</span>
                </h3>

                <div class="bg-white dark:bg-gray-700 rounded-2xl overflow-hidden shadow-lg border border-purple-100 dark:border-purple-900/50 transition-colors duration-300">
                    <!-- Chat Header -->
                    <div class="bg-gradient-to-r from-purple-500 via-pink-500 to-purple-600 px-5 py-4 flex items-center justify-between">
                        <div class="flex items-center">
                            <div class="w-12 h-12 rounded-full bg-white/20 flex items-center justify-center mr-3 shadow-inner">
                                <span class="text-2xl">{{ cat.moodEmoji }}</span>
                            </div>
                            <div>
                                <p class="text-white font-bold text-lg">Dr. {{ cat.name }}</p>
                                <div class="flex items-center gap-2">
                                    <span class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></span>
                                    <p class="text-purple-100 text-sm">Online - Ready to chat</p>
                                </div>
                            </div>
                        </div>
                        <button type="button"
                                data-therapist-target="clearBtn"
                                data-action="click->therapist#clearChat"
                                class="text-white/70 hover:text-white hover:bg-white/20 p-2 rounded-lg transition-all"
                                title="Clear chat history">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                            </svg>
                        </button>
                    </div>

                    <!-- Chat Messages Area -->
                    <div data-therapist-target="chatArea" class="h-96 overflow-y-auto bg-gradient-to-b from-purple-50/50 to-pink-50/50 dark:from-gray-800 dark:to-gray-800">
                        <div data-therapist-target="messages" class="p-4 space-y-4">
                            <!-- Messages will be added here dynamically -->
                        </div>
                        <!-- Loading indicator -->
                        <div data-therapist-target="loading" class="hidden flex items-center justify-center py-8">
                            <div class="flex items-center gap-2 text-purple-400">
                                <svg class="animate-spin w-5 h-5" fill="none" viewBox="0 0 24 24">
                                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                                </svg>
                                <span>Loading chat history...</span>
                            </div>
                        </div>
                    </div>

                    <!-- Chat Input -->
                    <form data-action="submit->therapist#sendMessage" class="border-t border-purple-100 dark:border-gray-600 p-4 bg-white dark:bg-gray-700">
                        <div class="flex gap-3">
                            <div class="flex-1 relative">
                                <input type="text"
                                       data-therapist-target="input"
                                       data-action="keydown->therapist#handleKeydown"
                                       placeholder="Share what's on your mind..."
                                       class="w-full px-5 py-3 rounded-2xl border-2 border-purple-100 dark:border-gray-600 dark:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-purple-400 focus:border-purple-300 dark:focus:border-purple-500 text-gray-700 dark:text-gray-200 placeholder-gray-400 dark:placeholder-gray-500 transition-all"
                                       autocomplete="off">
                            </div>
                            <button type="submit"
                                    data-therapist-target="submit"
                                    class="bg-gradient-to-r from-purple-500 to-pink-500 hover:from-purple-600 hover:to-pink-600 text-white px-6 py-3 rounded-2xl transition-all shadow-lg hover:shadow-xl flex items-center gap-2 font-medium disabled:opacity-50 disabled:cursor-not-allowed">
                                <span>Send</span>
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
                                </svg>
                            </button>
                        </div>
                        <p class="text-xs text-gray-400 dark:text-gray-500 mt-3 text-center">Your conversation is saved and will be here when you return</p>
                    </form>
                </div>
            </div>

            {% if not cat.adopted %}
            <!-- Adoption Journey Section -->
            <div class="border-t dark:border-gray-700 pt-6 space-y-4">
                <!-- Fostering Status -->
                {% if cat.fostered %}
                <div class="bg-green-100 dark:bg-green-900/50 border border-green-300 dark:border-green-700 rounded-xl p-4">
                    <div class="flex items-center">
                        <span class="text-2xl mr-3">üè°</span>
                        <div>
                            <p class="font-bold text-green-800 dark:text-green-200">You're fostering {{ cat.name }}!</p>
                            <p class="text-sm text-green-600 dark:text-green-300">Since {{ cat.fosteredAt|date('F j, Y') }}</p>
                        </div>
                    </div>
                </div>
                {% endif %}

                <!-- Quiz & Journey Buttons -->
                <div class="grid grid-cols-2 gap-3">
                    {% if cat.compatibilityScore is null %}
                    <a href="{{ path('app_cat_quiz', {id: cat.id}) }}"
                       class="bg-gradient-to-r from-purple-500 to-pink-500 hover:from-purple-600 hover:to-pink-600 text-white font-bold py-3 px-4 rounded-xl transition-all flex items-center justify-center space-x-2 shadow-lg hover:shadow-xl">
                        <span class="text-xl">üìù</span>
                        <span>Take Quiz</span>
                    </a>
                    {% else %}
                    <a href="{{ path('app_cat_quiz_result', {id: cat.id}) }}"
                       class="bg-gradient-to-r from-purple-100 to-pink-100 dark:from-purple-900/50 dark:to-pink-900/50 text-purple-700 dark:text-purple-300 font-bold py-3 px-4 rounded-xl transition-all flex items-center justify-center space-x-2 border border-purple-200 dark:border-purple-700">
                        <span class="text-xl">{{ cat.compatibilityEmoji }}</span>
                        <span>{{ cat.compatibilityScore }}% Match</span>
                    </a>
                    {% endif %}

                    <a href="{{ path('app_cat_journey', {id: cat.id}) }}"
                       class="bg-gradient-to-r from-orange-100 to-amber-100 dark:from-orange-900/50 dark:to-amber-900/50 text-orange-700 dark:text-orange-300 font-bold py-3 px-4 rounded-xl transition-all flex items-center justify-center space-x-2 border border-orange-200 dark:border-orange-700">
                        <span class="text-xl">üó∫Ô∏è</span>
                        <span>Journey</span>
                    </a>
                </div>

                <!-- Main Adopt Button -->
                {% if cat.canBeAdopted %}
                <form action="{{ path('app_cat_adopt_new', {id: cat.id}) }}" method="POST">
                    <button type="submit"
                            onclick="return confirm('Are you ready to give {{ cat.name }} their forever home? This is wonderful!')"
                            class="w-full bg-gradient-to-r from-orange-500 to-amber-500 hover:from-orange-600 hover:to-amber-600 text-white font-bold py-4 px-6 rounded-xl transition-all text-lg flex items-center justify-center space-x-2 shadow-lg hover:shadow-xl">
                        <span class="text-2xl">üè†</span>
                        <span>Adopt {{ cat.name }}!</span>
                    </button>
                </form>
                {% else %}
                <div class="bg-gray-100 dark:bg-gray-700 rounded-xl p-4 text-center">
                    <p class="text-gray-600 dark:text-gray-300 text-sm">
                        <span class="font-bold">Keep bonding!</span>
                        Build a stronger connection with {{ cat.name }} to unlock adoption.
                    </p>
                    <a href="{{ path('app_cat_journey', {id: cat.id}) }}" class="text-orange-600 dark:text-orange-400 hover:underline text-sm font-medium">
                        View requirements
                    </a>
                </div>
                {% endif %}
            </div>
            {% endif %}

            <!-- Meta Info -->
            <div class="text-center text-sm text-gray-400 dark:text-gray-500 pt-4 border-t dark:border-gray-700">
                Joined the cafe on {{ cat.createdAt|date('F j, Y') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
