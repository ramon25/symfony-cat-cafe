{% extends 'base.html.twig' %}

{% block title %}Our Cats - Whiskers & Wonders Cat Cafe{% endblock %}

{% block body %}
<div class="space-y-8"
     data-controller="live-stats"
     data-live-stats-url-value="{{ path('app_api_cats_stats') }}"
     data-live-stats-interval-value="10000">
    <!-- Hero Section -->
    <div class="text-center py-8">
        <h1 class="text-4xl font-bold text-gray-800 dark:text-white mb-4">Welcome to Whiskers & Wonders! üêæ</h1>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
            Meet our adorable feline friends waiting for their forever homes.
            Spend time with them, care for them, and maybe find your purrfect companion!
        </p>
    </div>

    <!-- Stats Bar -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-6 transition-colors duration-300">
        <div class="flex items-center justify-between mb-4">
            <div class="flex items-center gap-2">
                <span class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></span>
                <span class="text-sm text-gray-500 dark:text-gray-400">Live updates</span>
                <span class="text-xs text-gray-400 dark:text-gray-500">Last updated: <span data-live-stats-target="lastUpdated">now</span></span>
            </div>
            <button type="button"
                    data-action="live-stats#refresh"
                    class="text-sm text-orange-500 hover:text-orange-600 dark:text-orange-400 dark:hover:text-orange-300 flex items-center gap-1">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                </svg>
                Refresh
            </button>
        </div>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-center">
            <div class="p-4 bg-orange-50 dark:bg-orange-900/30 rounded-lg">
                <p class="text-3xl font-bold text-orange-600 dark:text-orange-400 transition-transform duration-300" data-live-stats-target="inCafeCount">{{ cats|length }}</p>
                <p class="text-gray-600 dark:text-gray-300">In Cafe</p>
            </div>
            <div class="p-4 bg-blue-50 dark:bg-blue-900/30 rounded-lg">
                <p class="text-3xl font-bold text-blue-600 dark:text-blue-400 transition-transform duration-300" data-live-stats-target="awayCount">{{ catsAway|length }}</p>
                <p class="text-gray-600 dark:text-gray-300">Out Exploring</p>
            </div>
            <div class="p-4 bg-green-50 dark:bg-green-900/30 rounded-lg">
                <p class="text-3xl font-bold text-green-600 dark:text-green-400 transition-transform duration-300" data-live-stats-target="adoptedCount">{{ adoptedCount }}</p>
                <p class="text-gray-600 dark:text-gray-300">Happy Adoptions</p>
            </div>
            <div class="p-4 bg-red-50 dark:bg-red-900/30 rounded-lg">
                <p class="text-3xl font-bold text-red-600 dark:text-red-400 transition-transform duration-300" data-live-stats-target="hungryCount">{{ hungryCats|length }}</p>
                <p class="text-gray-600 dark:text-gray-300">Hungry Cats</p>
            </div>
        </div>

        <div class="mt-4 flex justify-center {{ hungryCats|length == 0 ? 'hidden' : '' }}" data-live-stats-target="feedAllButton">
            <form action="{{ path('app_feed_all') }}" method="POST">
                <button type="submit" class="bg-orange-500 hover:bg-orange-600 dark:bg-orange-600 dark:hover:bg-orange-500 text-white font-bold py-2 px-6 rounded-full transition-colors flex items-center space-x-2">
                    <span>üçΩÔ∏è</span>
                    <span>Feed All Cats</span>
                </button>
            </form>
        </div>
    </div>

    <!-- Cats In Cafe -->
    {% if cats|length > 0 %}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for cat in cats %}
        <div class="cat-card bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden transition-colors duration-300" data-cat-id="{{ cat.id }}">
            <!-- Cat Header with AI Image -->
            <div class="bg-gradient-to-r from-orange-400 to-amber-400 dark:from-orange-600 dark:to-amber-600 p-4">
                <div class="flex justify-between items-start">
                    <div class="flex items-center gap-3">
                        <!-- AI Image or Emoji -->
                        {% if cat.hasAiImage %}
                        <img src="{{ cat.aiImageDataUrl }}"
                             alt="{{ cat.name }}"
                             class="w-16 h-16 rounded-full object-cover border-2 border-white/30 shadow-lg">
                        {% else %}
                        <div class="w-16 h-16 rounded-full bg-white/20 flex items-center justify-center">
                            <span class="text-3xl" data-stat="moodEmoji">{{ cat.moodEmoji }}</span>
                        </div>
                        {% endif %}
    <div>
        <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-4 flex items-center gap-2">
            <span>Cats at the Cafe</span>
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for cat in cats %}
            <div class="cat-card bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden transition-colors duration-300" data-cat-id="{{ cat.id }}">
                <!-- Cat Header -->
                <div class="bg-gradient-to-r from-orange-400 to-amber-400 dark:from-orange-600 dark:to-amber-600 p-4">
                    <div class="flex justify-between items-start">
                        <div>
                            <h3 class="text-2xl font-bold text-white">{{ cat.name }}</h3>
                            <p class="text-orange-100">{{ cat.breed }}</p>
                        </div>
                    </div>
                    <span class="text-2xl transition-transform duration-300" data-stat="moodEmoji">{{ cat.moodEmoji }}</span>
                        <span class="text-4xl transition-transform duration-300" data-stat="moodEmoji">{{ cat.moodEmoji }}</span>
                    </div>
                </div>

                <!-- Cat Info -->
                <div class="p-4 space-y-4">
                    <div class="flex justify-between text-sm text-gray-600 dark:text-gray-300">
                        <span>{{ cat.age }} years old</span>
                        <span>{{ cat.color }}</span>
                    </div>

                    <!-- Stats -->
                    <div class="space-y-2">
                        <div>
                            <div class="flex justify-between text-sm mb-1 text-gray-700 dark:text-gray-300">
                                <span>Hunger</span>
                                <span class="transition-all duration-300" data-stat="hunger-value">{{ cat.hunger }}%</span>
                            </div>
                            <div class="bg-gray-200 dark:bg-gray-700 rounded-full h-2">
                                <div class="stat-bar bg-red-400 rounded-full h-2 transition-all duration-500" data-stat="hunger-bar" style="width: {{ cat.hunger }}%"></div>
                            </div>
                        </div>
                        <div>
                            <div class="flex justify-between text-sm mb-1 text-gray-700 dark:text-gray-300">
                                <span>Happiness</span>
                                <span class="transition-all duration-300" data-stat="happiness-value">{{ cat.happiness }}%</span>
                            </div>
                            <div class="bg-gray-200 dark:bg-gray-700 rounded-full h-2">
                                <div class="stat-bar bg-green-400 rounded-full h-2 transition-all duration-500" data-stat="happiness-bar" style="width: {{ cat.happiness }}%"></div>
                            </div>
                        </div>
                        <div>
                            <div class="flex justify-between text-sm mb-1 text-gray-700 dark:text-gray-300">
                                <span>Energy</span>
                                <span class="transition-all duration-300" data-stat="energy-value">{{ cat.energy }}%</span>
                            </div>
                            <div class="bg-gray-200 dark:bg-gray-700 rounded-full h-2">
                                <div class="stat-bar bg-blue-400 rounded-full h-2 transition-all duration-500" data-stat="energy-bar" style="width: {{ cat.energy }}%"></div>
                            </div>
                        </div>
                    </div>

                    <!-- Mood -->
                    <div class="text-center py-2 bg-gray-50 dark:bg-gray-700 rounded-lg">
                        <span class="text-sm text-gray-600 dark:text-gray-300">Feeling: </span>
                        <span class="font-semibold capitalize text-gray-800 dark:text-white" data-stat="mood">{{ cat.mood }}</span>
                    </div>

                    <!-- Action Button -->
                    <a href="{{ path('app_cat_show', {id: cat.id}) }}"
                       class="block w-full text-center bg-orange-500 hover:bg-orange-600 dark:bg-orange-600 dark:hover:bg-orange-500 text-white font-bold py-2 px-4 rounded-lg transition-colors">
                        Visit {{ cat.name }}
                    </a>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
    {% else %}
    <div class="text-center py-12 bg-white dark:bg-gray-800 rounded-xl shadow-md transition-colors duration-300">
        <span class="text-6xl mb-4 block">üò¥</span>
        <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-2">No cats at the cafe right now</h2>
        <p class="text-gray-600 dark:text-gray-300 mb-4">
            {% if catsAway|length > 0 %}
            All our cats are out exploring! Check back soon - they come and go throughout the day.
            {% else %}
            Be the first to add a furry friend to our family.
            {% endif %}
        </p>
        {% if catsAway|length == 0 %}
        <a href="{{ path('app_cat_new') }}"
           class="inline-block bg-orange-500 hover:bg-orange-600 dark:bg-orange-600 dark:hover:bg-orange-500 text-white font-bold py-2 px-6 rounded-full transition-colors">
            Add a Cat
        </a>
        {% endif %}
    </div>
    {% endif %}

    <!-- Cats Out Exploring -->
    {% if catsAway|length > 0 %}
    <div>
        <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-4 flex items-center gap-2">
            <span>Out Exploring</span>
        </h2>
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-6 transition-colors duration-300">
            <p class="text-gray-600 dark:text-gray-300 mb-4 text-sm">
                These cats are currently out on adventures! They'll be back soon.
            </p>
            <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
                {% for cat in catsAway %}
                <a href="{{ path('app_cat_show', {id: cat.id}) }}"
                   class="group p-4 bg-gray-50 dark:bg-gray-700 rounded-xl hover:bg-blue-50 dark:hover:bg-blue-900/30 transition-colors">
                    <div class="flex items-center gap-3">
                        <span class="text-3xl opacity-50 group-hover:opacity-100 transition-opacity">{{ cat.moodEmoji }}</span>
                        <div>
                            <p class="font-bold text-gray-800 dark:text-white group-hover:text-blue-600 dark:group-hover:text-blue-400">{{ cat.name }}</p>
                            <p class="text-xs text-gray-500 dark:text-gray-400">{{ cat.breed }}</p>
                        </div>
                    </div>
                </a>
                {% endfor %}
            </div>
        </div>
    </div>
    {% endif %}
</div>
{% endblock %}
