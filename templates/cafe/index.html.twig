{% extends 'base.html.twig' %}

{% block title %}Our Cats - Whiskers & Wonders Cat Cafe{% endblock %}

{% block body %}
<div class="space-y-8">
    <!-- Hero Section -->
    <div class="text-center py-8">
        <h1 class="text-4xl font-bold text-gray-800 mb-4">Welcome to Whiskers & Wonders! üêæ</h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            Meet our adorable feline friends waiting for their forever homes.
            Spend time with them, care for them, and maybe find your purrfect companion!
        </p>
    </div>

    <!-- Stats Bar -->
    <div class="bg-white rounded-xl shadow-md p-6">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-center">
            <div class="p-4 bg-orange-50 rounded-lg">
                <p class="text-3xl font-bold text-orange-600">{{ cats|length }}</p>
                <p class="text-gray-600">Available Cats</p>
            </div>
            <div class="p-4 bg-green-50 rounded-lg">
                <p class="text-3xl font-bold text-green-600">{{ adoptedCount }}</p>
                <p class="text-gray-600">Happy Adoptions</p>
            </div>
            <div class="p-4 bg-red-50 rounded-lg">
                <p class="text-3xl font-bold text-red-600">{{ hungryCats|length }}</p>
                <p class="text-gray-600">Hungry Cats üçΩÔ∏è</p>
            </div>
        </div>

        {% if hungryCats|length > 0 %}
        <div class="mt-4 flex justify-center">
            <form action="{{ path('app_feed_all') }}" method="POST">
                <button type="submit" class="bg-orange-500 hover:bg-orange-600 text-white font-bold py-2 px-6 rounded-full transition-colors flex items-center space-x-2">
                    <span>üçΩÔ∏è</span>
                    <span>Feed All Cats</span>
                </button>
            </form>
        </div>
        {% endif %}
    </div>

    <!-- Cat Grid -->
    {% if cats|length > 0 %}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for cat in cats %}
        <div class="cat-card bg-white rounded-xl shadow-md overflow-hidden">
            <!-- Cat Header -->
            <div class="bg-gradient-to-r from-orange-400 to-amber-400 p-4">
                <div class="flex justify-between items-start">
                    <div>
                        <h3 class="text-2xl font-bold text-white">{{ cat.name }}</h3>
                        <p class="text-orange-100">{{ cat.breed }}</p>
                    </div>
                    <span class="text-4xl">{{ cat.moodEmoji }}</span>
                </div>
            </div>

            <!-- Cat Info -->
            <div class="p-4 space-y-4">
                <div class="flex justify-between text-sm text-gray-600">
                    <span>üéÇ {{ cat.age }} years old</span>
                    <span>üé® {{ cat.color }}</span>
                </div>

                <!-- Stats -->
                <div class="space-y-2">
                    <div>
                        <div class="flex justify-between text-sm mb-1">
                            <span>Hunger</span>
                            <span>{{ cat.hunger }}%</span>
                        </div>
                        <div class="bg-gray-200 rounded-full h-2">
                            <div class="stat-bar bg-red-400 rounded-full h-2" style="width: {{ cat.hunger }}%"></div>
                        </div>
                    </div>
                    <div>
                        <div class="flex justify-between text-sm mb-1">
                            <span>Happiness</span>
                            <span>{{ cat.happiness }}%</span>
                        </div>
                        <div class="bg-gray-200 rounded-full h-2">
                            <div class="stat-bar bg-green-400 rounded-full h-2" style="width: {{ cat.happiness }}%"></div>
                        </div>
                    </div>
                    <div>
                        <div class="flex justify-between text-sm mb-1">
                            <span>Energy</span>
                            <span>{{ cat.energy }}%</span>
                        </div>
                        <div class="bg-gray-200 rounded-full h-2">
                            <div class="stat-bar bg-blue-400 rounded-full h-2" style="width: {{ cat.energy }}%"></div>
                        </div>
                    </div>
                </div>

                <!-- Mood -->
                <div class="text-center py-2 bg-gray-50 rounded-lg">
                    <span class="text-sm text-gray-600">Feeling: </span>
                    <span class="font-semibold capitalize text-gray-800">{{ cat.mood }}</span>
                </div>

                <!-- Action Button -->
                <a href="{{ path('app_cat_show', {id: cat.id}) }}"
                   class="block w-full text-center bg-orange-500 hover:bg-orange-600 text-white font-bold py-2 px-4 rounded-lg transition-colors">
                    Visit {{ cat.name }}
                </a>
            </div>
        </div>
        {% endfor %}
    </div>
    {% else %}
    <div class="text-center py-12 bg-white rounded-xl shadow-md">
        <span class="text-6xl mb-4 block">üòø</span>
        <h2 class="text-2xl font-bold text-gray-800 mb-2">No cats in the cafe yet!</h2>
        <p class="text-gray-600 mb-4">Be the first to add a furry friend to our family.</p>
        <a href="{{ path('app_cat_new') }}"
           class="inline-block bg-orange-500 hover:bg-orange-600 text-white font-bold py-2 px-6 rounded-full transition-colors">
            Add a Cat
        </a>
    </div>
    {% endif %}
</div>
{% endblock %}
