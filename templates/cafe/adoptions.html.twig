{% extends 'base.html.twig' %}

{% block title %}My Cats - Whiskers & Wonders Cat Cafe{% endblock %}

{% block body %}
<div class="space-y-8">
    <!-- Header -->
    <div class="text-center py-8">
        <span class="text-6xl mb-4 block">üè†</span>
        <h1 class="text-4xl font-bold text-gray-800 dark:text-white mb-4">My Cats</h1>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
            Your furry family members - cats you're fostering and those you've adopted!
        </p>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-2 gap-4 max-w-xl mx-auto">
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-6 text-center transition-colors duration-300">
            <div class="text-4xl font-bold text-green-600 dark:text-green-400">{{ adoptedCats|length }}</div>
            <p class="text-gray-600 dark:text-gray-300">Cats Adopted</p>
        </div>
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-6 text-center transition-colors duration-300">
            <div class="text-4xl font-bold text-purple-600 dark:text-purple-400">{{ fosteredCats|length }}</div>
            <p class="text-gray-600 dark:text-gray-300">Currently Fostering</p>
        </div>
    </div>

    {% if fosteredCats|length > 0 %}
    <!-- Fostered Cats Section -->
    <div>
        <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-4 flex items-center">
            <span class="mr-2">üè°</span> Currently Fostering
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for cat in fosteredCats %}
            <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden border-2 border-purple-200 dark:border-purple-800 transition-colors duration-300">
                <!-- Cat Header -->
                <div class="bg-gradient-to-r from-purple-400 to-indigo-400 dark:from-purple-600 dark:to-indigo-600 p-4">
                    <div class="flex justify-between items-start">
                        <div>
                            <h3 class="text-2xl font-bold text-white">{{ cat.name }}</h3>
                            <p class="text-purple-100">{{ cat.breed }}</p>
                        </div>
                        <span class="text-4xl">{{ cat.moodEmoji }}</span>
                    </div>
                </div>

                <!-- Cat Info -->
                <div class="p-4 space-y-3">
                    <div class="flex justify-between text-sm text-gray-600 dark:text-gray-300">
                        <span>{{ cat.age }} years old</span>
                        <span>{{ cat.color }}</span>
                    </div>

                    <!-- Bonding Progress -->
                    <div class="space-y-2">
                        <div class="flex justify-between text-sm">
                            <span class="text-gray-600 dark:text-gray-400">Bonding Level</span>
                            <span class="font-semibold text-purple-600 dark:text-purple-400">{{ cat.bondingLevel }}%</span>
                        </div>
                        <div class="h-2 bg-gray-200 dark:bg-gray-700 rounded-full">
                            <div class="h-2 bg-purple-500 rounded-full transition-all duration-300" style="width: {{ cat.bondingLevel }}%"></div>
                        </div>
                        <p class="text-xs text-gray-500 dark:text-gray-400 text-center">{{ cat.bondingMilestone }} {{ cat.bondingEmoji }}</p>
                    </div>

                    <div class="pt-3 border-t dark:border-gray-700 text-center">
                        <p class="text-sm text-gray-500 dark:text-gray-400">Fostering since</p>
                        <p class="font-semibold text-purple-600 dark:text-purple-400">{{ cat.fosteredAt|date('F j, Y') }}</p>
                    </div>

                    {% if cat.canBeAdopted %}
                    <div class="bg-green-50 dark:bg-green-900/30 rounded-lg p-3 text-center">
                        <span class="text-green-700 dark:text-green-300 font-medium">Ready for adoption!</span>
                    </div>
                    {% else %}
                    <div class="bg-purple-50 dark:bg-purple-900/30 rounded-lg p-3 text-center">
                        <span class="text-purple-700 dark:text-purple-300 font-medium">Keep bonding to adopt!</span>
                    </div>
                    {% endif %}

                    <a href="{{ path('app_cat_show', {id: cat.id}) }}"
                       class="block w-full text-center bg-purple-500 hover:bg-purple-600 text-white font-semibold py-2 px-4 rounded-lg transition-colors">
                        Visit {{ cat.name }}
                    </a>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
    {% endif %}

    {% if adoptedCats|length > 0 %}
    <!-- Adopted Cats Section -->
    <div>
        <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-4 flex items-center">
            <span class="mr-2">üè†</span> My Forever Family
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for cat in adoptedCats %}
            <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden border-2 border-green-200 dark:border-green-800 transition-colors duration-300">
                <!-- Cat Header -->
                <div class="bg-gradient-to-r from-green-400 to-emerald-400 dark:from-green-600 dark:to-emerald-600 p-4">
                    <div class="flex justify-between items-start">
                        <div>
                            <h3 class="text-2xl font-bold text-white">{{ cat.name }}</h3>
                            <p class="text-green-100">{{ cat.breed }}</p>
                        </div>
                        <span class="text-4xl">{{ cat.moodEmoji }}</span>
                    </div>
                </div>

                <!-- Cat Info -->
                <div class="p-4 space-y-3">
                    <div class="flex justify-between text-sm text-gray-600 dark:text-gray-300">
                        <span>{{ cat.age }} years old</span>
                        <span>{{ cat.color }}</span>
                    </div>

                    {% if cat.description %}
                    <p class="text-gray-600 dark:text-gray-300 text-sm">{{ cat.description|slice(0, 100) }}{% if cat.description|length > 100 %}...{% endif %}</p>
                    {% endif %}

                    <div class="pt-3 border-t dark:border-gray-700 text-center">
                        <p class="text-sm text-gray-500 dark:text-gray-400">Adopted on</p>
                        <p class="font-semibold text-green-600 dark:text-green-400">{{ cat.adoptedAt|date('F j, Y') }}</p>
                    </div>

                    <div class="bg-green-50 dark:bg-green-900/30 rounded-lg p-3 text-center">
                        <span class="text-green-700 dark:text-green-300 font-medium">Living their best life! {{ cat.bondingEmoji }}</span>
                    </div>

                    <a href="{{ path('app_cat_show', {id: cat.id}) }}"
                       class="block w-full text-center bg-green-500 hover:bg-green-600 text-white font-semibold py-2 px-4 rounded-lg transition-colors">
                        Visit {{ cat.name }}
                    </a>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
    {% endif %}

    {% if adoptedCats|length == 0 and fosteredCats|length == 0 %}
    <div class="text-center py-12 bg-white dark:bg-gray-800 rounded-xl shadow-md transition-colors duration-300">
        <span class="text-6xl mb-4 block">üê±</span>
        <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-2">No cats yet!</h2>
        <p class="text-gray-600 dark:text-gray-300 mb-4">Start your journey by visiting our cats and building bonds with them.</p>
        <a href="{{ path('app_home') }}"
           class="inline-block bg-orange-500 hover:bg-orange-600 dark:bg-orange-600 dark:hover:bg-orange-500 text-white font-bold py-2 px-6 rounded-full transition-colors">
            Meet Our Cats
        </a>
    </div>
    {% endif %}

    <!-- Call to Action -->
    <div class="bg-gradient-to-r from-orange-400 to-amber-400 dark:from-orange-600 dark:to-amber-600 rounded-xl p-8 text-center text-white">
        <h2 class="text-2xl font-bold mb-2">Ready to grow your family?</h2>
        <p class="mb-4 text-orange-100">Every cat deserves a loving home. Visit our cafe and meet your new best friend!</p>
        <a href="{{ path('app_home') }}"
           class="inline-block bg-white text-orange-600 dark:text-orange-700 font-bold py-2 px-6 rounded-full hover:bg-orange-50 transition-colors">
            Browse Available Cats
        </a>
    </div>
</div>
{% endblock %}
