{% extends 'base.html.twig' %}

{% block title %}Happy Adoptions - Whiskers & Wonders Cat Cafe{% endblock %}

{% block body %}
<div class="space-y-8">
    <!-- Header -->
    <div class="text-center py-8">
        <span class="text-6xl mb-4 block">ğŸ </span>
        <h1 class="text-4xl font-bold text-gray-800 mb-4">Happy Adoptions</h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            These lucky cats have found their forever homes! Every adoption is a success story.
        </p>
    </div>

    {% if cats|length > 0 %}
    <!-- Stats -->
    <div class="bg-white rounded-xl shadow-md p-6 text-center">
        <div class="text-4xl font-bold text-green-600">{{ cats|length }}</div>
        <p class="text-gray-600">Cats Successfully Adopted</p>
    </div>

    <!-- Adopted Cats Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for cat in cats %}
        <div class="bg-white rounded-xl shadow-md overflow-hidden border-2 border-green-200">
            <!-- Cat Header -->
            <div class="bg-gradient-to-r from-green-400 to-emerald-400 p-4">
                <div class="flex justify-between items-start">
                    <div>
                        <h3 class="text-2xl font-bold text-white">{{ cat.name }}</h3>
                        <p class="text-green-100">{{ cat.breed }}</p>
                    </div>
                    <span class="text-4xl">ğŸ </span>
                </div>
            </div>

            <!-- Cat Info -->
            <div class="p-4 space-y-3">
                <div class="flex justify-between text-sm text-gray-600">
                    <span>ğŸ‚ {{ cat.age }} years old</span>
                    <span>ğŸ¨ {{ cat.color }}</span>
                </div>

                {% if cat.description %}
                <p class="text-gray-600 text-sm">{{ cat.description|slice(0, 100) }}{% if cat.description|length > 100 %}...{% endif %}</p>
                {% endif %}

                <div class="pt-3 border-t text-center">
                    <p class="text-sm text-gray-500">Adopted on</p>
                    <p class="font-semibold text-green-600">{{ cat.adoptedAt|date('F j, Y') }}</p>
                </div>

                <div class="bg-green-50 rounded-lg p-3 text-center">
                    <span class="text-green-700 font-medium">Living their best life! ğŸ˜¸</span>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
    {% else %}
    <div class="text-center py-12 bg-white rounded-xl shadow-md">
        <span class="text-6xl mb-4 block">ğŸ±</span>
        <h2 class="text-2xl font-bold text-gray-800 mb-2">No adoptions yet!</h2>
        <p class="text-gray-600 mb-4">Be the first to give a cat their forever home.</p>
        <a href="{{ path('app_home') }}"
           class="inline-block bg-orange-500 hover:bg-orange-600 text-white font-bold py-2 px-6 rounded-full transition-colors">
            Meet Our Cats
        </a>
    </div>
    {% endif %}

    <!-- Call to Action -->
    <div class="bg-gradient-to-r from-orange-400 to-amber-400 rounded-xl p-8 text-center text-white">
        <h2 class="text-2xl font-bold mb-2">Ready to adopt?</h2>
        <p class="mb-4 text-orange-100">Every cat deserves a loving home. Visit our cafe and meet your new best friend!</p>
        <a href="{{ path('app_home') }}"
           class="inline-block bg-white text-orange-600 font-bold py-2 px-6 rounded-full hover:bg-orange-50 transition-colors">
            Browse Available Cats
        </a>
    </div>
</div>
{% endblock %}
