{% extends 'base.html.twig' %}

{% block title %}My Profile - Whiskers & Wonders{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto">
    <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-xl overflow-hidden">
        <!-- Profile Header -->
        <div class="bg-gradient-to-r from-orange-400 to-amber-500 px-8 py-12">
            <div class="flex items-center space-x-6">
                <div class="w-24 h-24 bg-white dark:bg-gray-800 rounded-full flex items-center justify-center text-5xl shadow-lg">
                    üê±
                </div>
                <div class="text-white">
                    <h1 class="text-3xl font-bold">{{ app.user.username }}</h1>
                    <p class="opacity-90">{{ app.user.email }}</p>
                    <p class="text-sm opacity-75 mt-1">Member since {{ app.user.createdAt|date('F j, Y') }}</p>
                </div>
            </div>
        </div>

        <!-- Stats Overview -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 p-8 border-b border-gray-200 dark:border-gray-700">
            <div class="text-center">
                <div class="text-4xl font-bold text-orange-500">{{ app.user.totalAchievementPoints }}</div>
                <div class="text-gray-600 dark:text-gray-400">Achievement Points</div>
            </div>
            <div class="text-center">
                <div class="text-4xl font-bold text-green-500">{{ app.user.adoptedCats|length }}</div>
                <div class="text-gray-600 dark:text-gray-400">Cats Adopted</div>
            </div>
            <div class="text-center">
                <div class="text-4xl font-bold text-purple-500">{{ app.user.achievements|length }}</div>
                <div class="text-gray-600 dark:text-gray-400">Achievements Unlocked</div>
            </div>
        </div>

        <div class="p-8">
            <!-- My Cats Section -->
            <div class="mb-8">
                <h2 class="text-xl font-bold text-gray-800 dark:text-white mb-4 flex items-center">
                    <span class="mr-2">My Cats</span>
                </h2>

                {% if app.user.cats|length > 0 %}
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                        {% for cat in app.user.cats %}
                            <a href="{{ path('app_cat_show', {id: cat.id}) }}"
                               class="block bg-gray-50 dark:bg-gray-700 rounded-lg p-4 hover:shadow-md transition-shadow">
                                <div class="flex items-center space-x-3">
                                    <span class="text-3xl">{{ cat.moodEmoji }}</span>
                                    <div>
                                        <div class="font-semibold text-gray-800 dark:text-white">{{ cat.name }}</div>
                                        <div class="text-sm text-gray-500 dark:text-gray-400">{{ cat.breed }}</div>
                                        {% if cat.adopted %}
                                            <span class="inline-block px-2 py-1 text-xs bg-green-100 dark:bg-green-900/50 text-green-700 dark:text-green-300 rounded mt-1">
                                                Adopted
                                            </span>
                                        {% elseif cat.fostered %}
                                            <span class="inline-block px-2 py-1 text-xs bg-purple-100 dark:bg-purple-900/50 text-purple-700 dark:text-purple-300 rounded mt-1">
                                                Fostering
                                            </span>
                                        {% endif %}
                                    </div>
                                </div>
                            </a>
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="text-center py-8 bg-gray-50 dark:bg-gray-700 rounded-lg">
                        <span class="text-4xl mb-2 block">üè†</span>
                        <p class="text-gray-600 dark:text-gray-400">You haven't adopted any cats yet!</p>
                        <a href="{{ path('app_home') }}"
                           class="inline-block mt-4 px-4 py-2 bg-orange-500 text-white rounded-lg hover:bg-orange-600 transition-colors">
                            Visit the Cafe
                        </a>
                    </div>
                {% endif %}
            </div>

            <!-- Recent Achievements Section -->
            <div>
                <h2 class="text-xl font-bold text-gray-800 dark:text-white mb-4 flex items-center">
                    <span class="mr-2">Recent Achievements</span>
                </h2>

                {% if app.user.achievements|length > 0 %}
                    <div class="space-y-3">
                        {% for achievement in app.user.achievements|slice(0, 5) %}
                            <div class="flex items-center justify-between bg-gray-50 dark:bg-gray-700 rounded-lg p-4">
                                <div class="flex items-center space-x-3">
                                    <span class="text-2xl">üèÜ</span>
                                    <div>
                                        <div class="font-semibold text-gray-800 dark:text-white">{{ achievement.name }}</div>
                                        <div class="text-sm text-gray-500 dark:text-gray-400">
                                            Unlocked {{ achievement.unlockedAt|date('M j, Y') }}
                                        </div>
                                    </div>
                                </div>
                                <div class="text-orange-500 font-bold">+{{ achievement.points }} pts</div>
                            </div>
                        {% endfor %}
                    </div>
                    <div class="mt-4 text-center">
                        <a href="{{ path('app_achievements') }}"
                           class="text-orange-500 hover:text-orange-600 font-medium">
                            View All Achievements
                        </a>
                    </div>
                {% else %}
                    <div class="text-center py-8 bg-gray-50 dark:bg-gray-700 rounded-lg">
                        <span class="text-4xl mb-2 block">üèÜ</span>
                        <p class="text-gray-600 dark:text-gray-400">Start interacting with cats to earn achievements!</p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
