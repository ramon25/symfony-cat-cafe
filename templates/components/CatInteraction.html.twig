<div {{ attributes.defaults({'data-poll': 'delay(10000)|$render'}) }}>
    {% set cat = this.cat %}

    {% if cat %}
    {# Action Message Toast #}
    {% if actionMessage %}
    <div class="mb-4 p-4 bg-gradient-to-r from-green-100 to-emerald-100 dark:from-green-900/50 dark:to-emerald-900/50 border border-green-300 dark:border-green-700 text-green-800 dark:text-green-200 rounded-xl flex items-center justify-between animate-fade-in shadow-md">
        <div class="flex-1">
            <div class="flex items-center gap-3">
                <span class="text-2xl">
                    {% if lastAction == 'feed' %}ğŸ½ï¸
                    {% elseif lastAction == 'pet' %}ğŸ¤—
                    {% elseif lastAction == 'play' %}ğŸ§¶
                    {% elseif lastAction == 'rest' %}ğŸ˜´
                    {% else %}âœ¨
                    {% endif %}
                </span>
                <span class="font-medium">{{ actionMessage }}</span>
            </div>
            {% if bondingMessage %}
            <div class="mt-1 ml-9 text-sm text-purple-600 dark:text-purple-400 font-medium">
                {{ this.bonding ? this.bonding.bondingEmoji : 'ğŸ¤' }} {{ bondingMessage }}
            </div>
            {% endif %}
        </div>
        <button type="button" data-action="live#action" data-live-action-param="clearMessage" class="text-green-600 dark:text-green-400 hover:text-green-800 dark:hover:text-green-200">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
        </button>
    </div>
    {% endif %}

    {# Cat Mood Header #}
    <div class="text-center mb-6 p-4 bg-gradient-to-r from-orange-50 to-amber-50 dark:from-orange-900/30 dark:to-amber-900/30 rounded-xl">
        <span class="text-6xl mb-2 block transition-transform duration-300 hover:scale-110">{{ cat.moodEmoji }}</span>
        <p class="text-lg font-semibold text-gray-700 dark:text-gray-200 capitalize">Feeling {{ cat.mood }}</p>
    </div>

    {# Stats Section #}
    <div class="space-y-4 mb-6">
        <h3 class="font-bold text-gray-800 dark:text-white flex items-center gap-2">
            <span class="text-xl">ğŸ“Š</span>
            Live Status
            <span class="text-xs bg-green-500 text-white px-2 py-0.5 rounded-full animate-pulse">LIVE</span>
            <span class="text-xs text-gray-400 dark:text-gray-500 ml-auto">Auto-refreshes every 10s</span>
        </h3>

        {# Hunger Bar #}
        <div class="group">
            <div class="flex justify-between text-sm mb-1">
                <span class="flex items-center gap-2 text-gray-700 dark:text-gray-300">
                    <span class="text-lg">ğŸ½ï¸</span>
                    <span class="font-medium">Hunger</span>
                </span>
                <span class="font-bold {% if cat.hunger > 70 %}text-red-600 dark:text-red-400 animate-pulse{% else %}text-gray-600 dark:text-gray-300{% endif %}">
                    {{ cat.hunger }}%
                    {% if cat.hunger > 70 %}<span class="ml-1">âš ï¸</span>{% endif %}
                </span>
            </div>
            <div class="bg-gray-200 dark:bg-gray-700 rounded-full h-5 overflow-hidden shadow-inner">
                <div class="bg-gradient-to-r {{ this.hungerBarColor }} rounded-full h-5 transition-all duration-500 ease-out flex items-center justify-end"
                     style="width: {{ cat.hunger }}%">
                    {% if cat.hunger > 15 %}
                    <span class="text-xs text-white/80 pr-2 font-medium">{{ cat.hunger }}%</span>
                    {% endif %}
                </div>
            </div>
        </div>

        {# Happiness Bar #}
        <div class="group">
            <div class="flex justify-between text-sm mb-1">
                <span class="flex items-center gap-2 text-gray-700 dark:text-gray-300">
                    <span class="text-lg">ğŸ˜Š</span>
                    <span class="font-medium">Happiness</span>
                </span>
                <span class="font-bold {% if cat.happiness < 30 %}text-orange-600 dark:text-orange-400{% else %}text-gray-600 dark:text-gray-300{% endif %}">
                    {{ cat.happiness }}%
                    {% if cat.happiness >= 80 %}<span class="ml-1">ğŸŒŸ</span>{% endif %}
                </span>
            </div>
            <div class="bg-gray-200 dark:bg-gray-700 rounded-full h-5 overflow-hidden shadow-inner">
                <div class="bg-gradient-to-r {{ this.happinessBarColor }} rounded-full h-5 transition-all duration-500 ease-out flex items-center justify-end"
                     style="width: {{ cat.happiness }}%">
                    {% if cat.happiness > 15 %}
                    <span class="text-xs text-white/80 pr-2 font-medium">{{ cat.happiness }}%</span>
                    {% endif %}
                </div>
            </div>
        </div>

        {# Energy Bar #}
        <div class="group">
            <div class="flex justify-between text-sm mb-1">
                <span class="flex items-center gap-2 text-gray-700 dark:text-gray-300">
                    <span class="text-lg">âš¡</span>
                    <span class="font-medium">Energy</span>
                </span>
                <span class="font-bold {% if cat.energy < 20 %}text-gray-500 dark:text-gray-400{% else %}text-gray-600 dark:text-gray-300{% endif %}">
                    {{ cat.energy }}%
                    {% if cat.energy < 20 %}<span class="ml-1">ğŸ’¤</span>{% endif %}
                </span>
            </div>
            <div class="bg-gray-200 dark:bg-gray-700 rounded-full h-5 overflow-hidden shadow-inner">
                <div class="bg-gradient-to-r {{ this.energyBarColor }} rounded-full h-5 transition-all duration-500 ease-out flex items-center justify-end"
                     style="width: {{ cat.energy }}%">
                    {% if cat.energy > 15 %}
                    <span class="text-xs text-white/80 pr-2 font-medium">{{ cat.energy }}%</span>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    {% if not cat.adopted %}
    {# Bonding Progress #}
    {% set bonding = this.bonding %}
    {% set bondingLevel = bonding ? bonding.bondingLevel : 0 %}
    {% set bondingEmoji = bonding ? bonding.bondingEmoji : 'ğŸ¤' %}
    {% set bondingMilestone = bonding ? bonding.bondingMilestone : 'Just Met' %}
    <div class="mb-6 p-4 bg-gradient-to-r from-pink-50 to-purple-50 dark:from-pink-900/20 dark:to-purple-900/20 rounded-xl border border-pink-200 dark:border-pink-800">
        <div class="flex items-center justify-between mb-2">
            <h3 class="font-bold text-gray-800 dark:text-white flex items-center gap-2">
                <span class="text-xl">{{ bondingEmoji }}</span>
                Bond with {{ cat.name }}
            </h3>
            <span class="text-lg font-bold text-purple-600 dark:text-purple-400">{{ bondingLevel }}%</span>
        </div>

        <div class="relative h-3 bg-gray-200 dark:bg-gray-700 rounded-full overflow-hidden">
            <div class="absolute h-full bg-gradient-to-r from-pink-500 to-purple-500 rounded-full transition-all duration-500"
                 style="width: {{ bondingLevel }}%"></div>
            <div class="absolute top-0 left-[30%] h-full w-0.5 bg-orange-400 opacity-50" title="Foster unlock"></div>
            <div class="absolute top-0 left-[50%] h-full w-0.5 bg-green-400 opacity-50" title="Adoption unlock"></div>
        </div>

        <div class="flex items-center justify-between mt-2 text-xs text-gray-500 dark:text-gray-400">
            <span>{{ bondingMilestone }}</span>
            <span>{{ cat.preferredInteractionEmoji }} Loves: {{ cat.preferredInteractionLabel }}</span>
        </div>

        <a href="{{ path('app_cat_journey', {id: cat.id}) }}" class="mt-3 block text-center text-sm text-purple-600 dark:text-purple-400 hover:text-purple-700 dark:hover:text-purple-300 font-medium">
            View Adoption Journey
        </a>
    </div>

    {# Interaction Buttons #}
    <div class="border-t dark:border-gray-700 pt-6">
        <h3 class="font-bold text-gray-800 dark:text-white mb-4 flex items-center gap-2">
            <span class="text-xl">ğŸ®</span>
            Interact with {{ cat.name }}
        </h3>

        <div class="grid grid-cols-2 gap-3">
            <button type="button"
                    data-action="live#action"
                    data-live-action-param="feed"
                    data-loading="addClass(opacity-50)"
                    class="w-full bg-gradient-to-r from-red-100 to-red-200 dark:from-red-900/50 dark:to-red-800/50 hover:from-red-200 hover:to-red-300 dark:hover:from-red-800/50 dark:hover:to-red-700/50 text-red-700 dark:text-red-300 font-bold py-4 px-4 rounded-xl transition-all flex items-center justify-center gap-2 shadow-md hover:shadow-lg hover:scale-[1.02] active:scale-[0.98]">
                <span class="text-2xl">ğŸ½ï¸</span>
                <span>Feed</span>
            </button>

            <button type="button"
                    data-action="live#action"
                    data-live-action-param="pet"
                    data-loading="addClass(opacity-50)"
                    class="w-full bg-gradient-to-r from-pink-100 to-pink-200 dark:from-pink-900/50 dark:to-pink-800/50 hover:from-pink-200 hover:to-pink-300 dark:hover:from-pink-800/50 dark:hover:to-pink-700/50 text-pink-700 dark:text-pink-300 font-bold py-4 px-4 rounded-xl transition-all flex items-center justify-center gap-2 shadow-md hover:shadow-lg hover:scale-[1.02] active:scale-[0.98]">
                <span class="text-2xl">ğŸ¤—</span>
                <span>Pet</span>
            </button>

            <button type="button"
                    data-action="live#action"
                    data-live-action-param="play"
                    data-loading="addClass(opacity-50)"
                    class="w-full bg-gradient-to-r from-yellow-100 to-yellow-200 dark:from-yellow-900/50 dark:to-yellow-800/50 hover:from-yellow-200 hover:to-yellow-300 dark:hover:from-yellow-800/50 dark:hover:to-yellow-700/50 text-yellow-700 dark:text-yellow-300 font-bold py-4 px-4 rounded-xl transition-all flex items-center justify-center gap-2 shadow-md hover:shadow-lg hover:scale-[1.02] active:scale-[0.98]">
                <span class="text-2xl">ğŸ§¶</span>
                <span>Play</span>
            </button>

            <button type="button"
                    data-action="live#action"
                    data-live-action-param="rest"
                    data-loading="addClass(opacity-50)"
                    class="w-full bg-gradient-to-r from-blue-100 to-blue-200 dark:from-blue-900/50 dark:to-blue-800/50 hover:from-blue-200 hover:to-blue-300 dark:hover:from-blue-800/50 dark:hover:to-blue-700/50 text-blue-700 dark:text-blue-300 font-bold py-4 px-4 rounded-xl transition-all flex items-center justify-center gap-2 shadow-md hover:shadow-lg hover:scale-[1.02] active:scale-[0.98]">
                <span class="text-2xl">ğŸ˜´</span>
                <span>Rest</span>
            </button>
        </div>

        <p class="text-center text-sm text-gray-500 dark:text-gray-400 mt-4 flex items-center justify-center gap-2">
            <span class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></span>
            Updates instantly - no page refresh needed!
        </p>
    </div>
    {% endif %}
    {% endif %}
</div>
