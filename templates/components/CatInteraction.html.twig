<div {{ attributes }}>
    {% set cat = this.cat %}

    {% if cat %}
    {# Action Message Toast #}
    {% if actionMessage %}
    <div class="mb-4 p-4 bg-gradient-to-r from-green-100 to-emerald-100 border border-green-300 text-green-800 rounded-xl flex items-center justify-between animate-fade-in shadow-md">
        <div class="flex items-center gap-3">
            <span class="text-2xl">
                {% if lastAction == 'feed' %}ğŸ½ï¸
                {% elseif lastAction == 'pet' %}ğŸ¤—
                {% elseif lastAction == 'play' %}ğŸ§¶
                {% elseif lastAction == 'rest' %}ğŸ˜´
                {% else %}âœ¨
                {% endif %}
            </span>
            <span class="font-medium">{{ actionMessage }}</span>
        </div>
        <button type="button" data-action="live#action" data-live-action-param="clearMessage" class="text-green-600 hover:text-green-800">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
        </button>
    </div>
    {% endif %}

    {# Cat Mood Header #}
    <div class="text-center mb-6 p-4 bg-gradient-to-r from-orange-50 to-amber-50 rounded-xl">
        <span class="text-6xl mb-2 block transition-transform duration-300 hover:scale-110">{{ cat.moodEmoji }}</span>
        <p class="text-lg font-semibold text-gray-700 capitalize">Feeling {{ cat.mood }}</p>
    </div>

    {# Stats Section #}
    <div class="space-y-4 mb-6">
        <h3 class="font-bold text-gray-800 flex items-center gap-2">
            <span class="text-xl">ğŸ“Š</span>
            Live Status
            <span class="text-xs bg-green-500 text-white px-2 py-0.5 rounded-full animate-pulse">LIVE</span>
        </h3>

        {# Hunger Bar #}
        <div class="group">
            <div class="flex justify-between text-sm mb-1">
                <span class="flex items-center gap-2">
                    <span class="text-lg">ğŸ½ï¸</span>
                    <span class="font-medium">Hunger</span>
                </span>
                <span class="font-bold {% if cat.hunger > 70 %}text-red-600 animate-pulse{% else %}text-gray-600{% endif %}">
                    {{ cat.hunger }}%
                    {% if cat.hunger > 70 %}<span class="ml-1">âš ï¸</span>{% endif %}
                </span>
            </div>
            <div class="bg-gray-200 rounded-full h-5 overflow-hidden shadow-inner">
                <div class="bg-gradient-to-r {{ this.hungerBarColor }} rounded-full h-5 transition-all duration-500 ease-out flex items-center justify-end"
                     style="width: {{ cat.hunger }}%">
                    {% if cat.hunger > 15 %}
                    <span class="text-xs text-white/80 pr-2 font-medium">{{ cat.hunger }}%</span>
                    {% endif %}
                </div>
            </div>
        </div>

        {# Happiness Bar #}
        <div class="group">
            <div class="flex justify-between text-sm mb-1">
                <span class="flex items-center gap-2">
                    <span class="text-lg">ğŸ˜Š</span>
                    <span class="font-medium">Happiness</span>
                </span>
                <span class="font-bold {% if cat.happiness < 30 %}text-orange-600{% else %}text-gray-600{% endif %}">
                    {{ cat.happiness }}%
                    {% if cat.happiness >= 80 %}<span class="ml-1">ğŸŒŸ</span>{% endif %}
                </span>
            </div>
            <div class="bg-gray-200 rounded-full h-5 overflow-hidden shadow-inner">
                <div class="bg-gradient-to-r {{ this.happinessBarColor }} rounded-full h-5 transition-all duration-500 ease-out flex items-center justify-end"
                     style="width: {{ cat.happiness }}%">
                    {% if cat.happiness > 15 %}
                    <span class="text-xs text-white/80 pr-2 font-medium">{{ cat.happiness }}%</span>
                    {% endif %}
                </div>
            </div>
        </div>

        {# Energy Bar #}
        <div class="group">
            <div class="flex justify-between text-sm mb-1">
                <span class="flex items-center gap-2">
                    <span class="text-lg">âš¡</span>
                    <span class="font-medium">Energy</span>
                </span>
                <span class="font-bold {% if cat.energy < 20 %}text-gray-500{% else %}text-gray-600{% endif %}">
                    {{ cat.energy }}%
                    {% if cat.energy < 20 %}<span class="ml-1">ğŸ’¤</span>{% endif %}
                </span>
            </div>
            <div class="bg-gray-200 rounded-full h-5 overflow-hidden shadow-inner">
                <div class="bg-gradient-to-r {{ this.energyBarColor }} rounded-full h-5 transition-all duration-500 ease-out flex items-center justify-end"
                     style="width: {{ cat.energy }}%">
                    {% if cat.energy > 15 %}
                    <span class="text-xs text-white/80 pr-2 font-medium">{{ cat.energy }}%</span>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    {% if not cat.adopted %}
    {# Interaction Buttons #}
    <div class="border-t pt-6">
        <h3 class="font-bold text-gray-800 mb-4 flex items-center gap-2">
            <span class="text-xl">ğŸ®</span>
            Interact with {{ cat.name }}
        </h3>

        <div class="grid grid-cols-2 gap-3">
            <button type="button"
                    data-action="live#action"
                    data-live-action-param="feed"
                    data-loading="addClass(opacity-50)"
                    class="w-full bg-gradient-to-r from-red-100 to-red-200 hover:from-red-200 hover:to-red-300 text-red-700 font-bold py-4 px-4 rounded-xl transition-all flex items-center justify-center gap-2 shadow-md hover:shadow-lg hover:scale-[1.02] active:scale-[0.98]">
                <span class="text-2xl">ğŸ½ï¸</span>
                <span>Feed</span>
            </button>

            <button type="button"
                    data-action="live#action"
                    data-live-action-param="pet"
                    data-loading="addClass(opacity-50)"
                    class="w-full bg-gradient-to-r from-pink-100 to-pink-200 hover:from-pink-200 hover:to-pink-300 text-pink-700 font-bold py-4 px-4 rounded-xl transition-all flex items-center justify-center gap-2 shadow-md hover:shadow-lg hover:scale-[1.02] active:scale-[0.98]">
                <span class="text-2xl">ğŸ¤—</span>
                <span>Pet</span>
            </button>

            <button type="button"
                    data-action="live#action"
                    data-live-action-param="play"
                    data-loading="addClass(opacity-50)"
                    class="w-full bg-gradient-to-r from-yellow-100 to-yellow-200 hover:from-yellow-200 hover:to-yellow-300 text-yellow-700 font-bold py-4 px-4 rounded-xl transition-all flex items-center justify-center gap-2 shadow-md hover:shadow-lg hover:scale-[1.02] active:scale-[0.98]">
                <span class="text-2xl">ğŸ§¶</span>
                <span>Play</span>
            </button>

            <button type="button"
                    data-action="live#action"
                    data-live-action-param="rest"
                    data-loading="addClass(opacity-50)"
                    class="w-full bg-gradient-to-r from-blue-100 to-blue-200 hover:from-blue-200 hover:to-blue-300 text-blue-700 font-bold py-4 px-4 rounded-xl transition-all flex items-center justify-center gap-2 shadow-md hover:shadow-lg hover:scale-[1.02] active:scale-[0.98]">
                <span class="text-2xl">ğŸ˜´</span>
                <span>Rest</span>
            </button>
        </div>

        <p class="text-center text-sm text-gray-500 mt-4 flex items-center justify-center gap-2">
            <span class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></span>
            Updates instantly - no page refresh needed!
        </p>
    </div>
    {% endif %}
    {% endif %}
</div>
