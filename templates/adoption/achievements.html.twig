{% extends 'base.html.twig' %}

{% block title %}Achievements | Whiskers & Wonders Cat Cafe{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto">
    <!-- Back Button -->
    <a href="{{ path('app_home') }}" class="inline-flex items-center text-orange-600 dark:text-orange-400 hover:text-orange-700 dark:hover:text-orange-300 mb-6">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Back to Cafe
    </a>

    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg overflow-hidden">
        <!-- Header -->
        <div class="bg-gradient-to-r from-yellow-400 to-orange-500 p-8 text-center">
            <span class="text-6xl mb-4 block">üèÜ</span>
            <h1 class="text-3xl font-bold text-white">Your Achievements</h1>
            <p class="text-yellow-100 mt-2">Track your journey at Whiskers & Wonders</p>
        </div>

        <!-- Progress Stats -->
        <div class="bg-gradient-to-r from-yellow-50 to-orange-50 dark:from-yellow-900/20 dark:to-orange-900/20 p-6 border-b dark:border-gray-700">
            <div class="grid grid-cols-3 gap-4 text-center">
                <div>
                    <p class="text-3xl font-bold text-yellow-600 dark:text-yellow-400">{{ progress.unlocked }}</p>
                    <p class="text-sm text-gray-600 dark:text-gray-400">Unlocked</p>
                </div>
                <div>
                    <p class="text-3xl font-bold text-orange-600 dark:text-orange-400">{{ totalPoints }}</p>
                    <p class="text-sm text-gray-600 dark:text-gray-400">Points</p>
                </div>
                <div>
                    <p class="text-3xl font-bold text-amber-600 dark:text-amber-400">{{ progress.percentage }}%</p>
                    <p class="text-sm text-gray-600 dark:text-gray-400">Complete</p>
                </div>
            </div>

            <!-- Progress Bar -->
            <div class="mt-4">
                <div class="h-3 bg-gray-200 dark:bg-gray-700 rounded-full overflow-hidden">
                    <div class="h-full bg-gradient-to-r from-yellow-400 to-orange-500 rounded-full transition-all duration-500"
                         style="width: {{ progress.percentage }}%"></div>
                </div>
                <p class="text-center text-sm text-gray-500 dark:text-gray-400 mt-2">
                    {{ progress.unlocked }} of {{ progress.total }} achievements unlocked
                </p>
            </div>
        </div>

        <!-- Achievements Grid -->
        <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                {% for achievement in achievements %}
                <div class="relative rounded-xl p-4 border-2 transition-all
                    {{ achievement.unlocked
                        ? 'bg-gradient-to-br from-yellow-50 to-orange-50 dark:from-yellow-900/20 dark:to-orange-900/20 border-yellow-300 dark:border-yellow-700'
                        : 'bg-gray-50 dark:bg-gray-700/50 border-gray-200 dark:border-gray-600 opacity-60'
                    }}">

                    {% if achievement.unlocked %}
                    <div class="absolute -top-2 -right-2">
                        <span class="inline-flex items-center justify-center w-8 h-8 bg-green-500 rounded-full text-white text-sm">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                            </svg>
                        </span>
                    </div>
                    {% endif %}

                    <div class="flex items-start">
                        <span class="text-4xl mr-4 {{ achievement.unlocked ? '' : 'grayscale' }}">{{ achievement.emoji }}</span>
                        <div class="flex-1">
                            <div class="flex items-center justify-between">
                                <h3 class="font-bold text-gray-800 dark:text-white">{{ achievement.name }}</h3>
                                <span class="text-sm font-medium {{ achievement.unlocked ? 'text-yellow-600 dark:text-yellow-400' : 'text-gray-400' }}">
                                    +{{ achievement.points }} pts
                                </span>
                            </div>
                            <p class="text-sm text-gray-600 dark:text-gray-300 mt-1">{{ achievement.description }}</p>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>

        <!-- Motivational Message -->
        <div class="p-6 bg-gray-50 dark:bg-gray-700/50 border-t dark:border-gray-700 text-center">
            {% if progress.percentage == 100 %}
            <p class="text-xl text-yellow-600 dark:text-yellow-400 font-bold">
                üéâ Amazing! You've unlocked ALL achievements! You're a true Cat Cafe Champion!
            </p>
            {% elseif progress.percentage >= 50 %}
            <p class="text-lg text-gray-600 dark:text-gray-300">
                Great progress! Keep visiting the cafe to unlock more achievements!
            </p>
            {% else %}
            <p class="text-lg text-gray-600 dark:text-gray-300">
                You're just getting started! Spend time with our cats to earn more achievements!
            </p>
            {% endif %}

            <a href="{{ path('app_home') }}" class="inline-flex items-center mt-4 px-6 py-3 bg-gradient-to-r from-orange-500 to-amber-500 hover:from-orange-600 hover:to-amber-600 text-white font-bold rounded-xl transition-all shadow-lg hover:shadow-xl">
                <span class="mr-2">üê±</span>
                Visit the Cats
            </a>
        </div>
    </div>
</div>
{% endblock %}
