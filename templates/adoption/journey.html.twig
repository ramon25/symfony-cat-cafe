{% extends 'base.html.twig' %}

{% block title %}Adoption Journey - {{ cat.name }} | Whiskers & Wonders{% endblock %}

{% block body %}
<div class="max-w-2xl mx-auto">
    <!-- Back Button -->
    <a href="{{ path('app_cat_show', {id: cat.id}) }}" class="inline-flex items-center text-orange-600 dark:text-orange-400 hover:text-orange-700 dark:hover:text-orange-300 mb-6">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Back to {{ cat.name }}
    </a>

    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg overflow-hidden">
        <!-- Header -->
        <div class="bg-gradient-to-r from-orange-400 to-amber-400 dark:from-orange-600 dark:to-amber-600 p-6 text-center">
            <span class="text-6xl mb-4 block">{{ cat.moodEmoji }}</span>
            <h1 class="text-3xl font-bold text-white">Adoption Journey</h1>
            <p class="text-orange-100 mt-2">Your path to adopting {{ cat.name }}</p>
        </div>

        <div class="p-6 space-y-8">
            <!-- Bonding Progress -->
            <div class="bg-gradient-to-r from-pink-50 to-purple-50 dark:from-pink-900/30 dark:to-purple-900/30 rounded-xl p-6">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-lg font-bold text-gray-800 dark:text-white flex items-center">
                        <span class="text-2xl mr-2">{{ cat.bondingEmoji }}</span>
                        Bond with {{ cat.name }}
                    </h3>
                    <span class="text-2xl font-bold text-purple-600 dark:text-purple-400">{{ cat.bondingLevel }}%</span>
                </div>

                <!-- Progress Bar -->
                <div class="relative h-4 bg-gray-200 dark:bg-gray-700 rounded-full overflow-hidden">
                    <div class="absolute h-full bg-gradient-to-r from-pink-500 to-purple-500 rounded-full transition-all duration-500"
                         style="width: {{ cat.bondingLevel }}%"></div>
                    <!-- Milestones -->
                    <div class="absolute top-0 left-[30%] h-full w-0.5 bg-orange-400" title="Foster unlock"></div>
                    <div class="absolute top-0 left-[50%] h-full w-0.5 bg-green-400" title="Adoption unlock"></div>
                </div>

                <div class="flex justify-between text-xs text-gray-500 dark:text-gray-400 mt-2">
                    <span>Just Met</span>
                    <span class="text-orange-600 dark:text-orange-400">30% Foster</span>
                    <span class="text-green-600 dark:text-green-400">50% Adopt</span>
                    <span>Best Friends</span>
                </div>

                <p class="text-center text-purple-600 dark:text-purple-400 font-medium mt-4">
                    {{ cat.bondingMilestone }}
                </p>

                <!-- Preferred Interaction Hint -->
                <div class="mt-4 p-3 bg-white/50 dark:bg-gray-800/50 rounded-lg text-center">
                    <p class="text-sm text-gray-600 dark:text-gray-300">
                        <span class="font-medium">Hint:</span> {{ cat.name }} especially loves
                        <span class="font-bold text-purple-600 dark:text-purple-400">{{ cat.preferredInteractionEmoji }} {{ cat.preferredInteractionLabel }}</span>!
                    </p>
                </div>
            </div>

            <!-- AI Bonding Advisor -->
            <div class="bg-gradient-to-r from-indigo-50 to-purple-50 dark:from-indigo-900/20 dark:to-purple-900/20 rounded-xl p-6"
                 data-controller="ai-bonding"
                 data-ai-bonding-url-value="{{ path('app_api_cat_bonding_advice', {id: cat.id}) }}">
                <h3 class="text-lg font-bold text-gray-800 dark:text-white mb-4 flex items-center">
                    <span class="text-2xl mr-2">ü§ñ</span>
                    AI Bonding Advisor
                    <span class="ml-2 text-xs bg-gradient-to-r from-purple-500 to-pink-500 text-white px-2 py-0.5 rounded-full">AI Powered</span>
                </h3>

                <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">
                    Personalized tips to help you strengthen your bond with {{ cat.name }}:
                </p>

                <!-- Loading State -->
                <div data-ai-bonding-target="loading" class="flex items-center justify-center py-6">
                    <div class="flex items-center gap-2 text-purple-400">
                        <svg class="animate-spin w-5 h-5" fill="none" viewBox="0 0 24 24">
                            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                        </svg>
                        <span>Generating personalized bonding tips...</span>
                    </div>
                </div>

                <!-- Content -->
                <div data-ai-bonding-target="content" class="hidden">
                    <div data-ai-bonding-target="advice" class="bg-white/60 dark:bg-gray-800/60 rounded-lg p-4 text-gray-700 dark:text-gray-300">
                    </div>

                    <button type="button"
                            data-ai-bonding-target="button"
                            data-action="click->ai-bonding#loadAdvice"
                            class="mt-4 text-sm text-purple-600 dark:text-purple-400 hover:underline flex items-center gap-1 mx-auto">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                        </svg>
                        Get new tips
                    </button>
                </div>

                <!-- Error State -->
                <div data-ai-bonding-target="error" class="hidden">
                    <div class="bg-white/60 dark:bg-gray-800/60 rounded-lg p-4 text-center text-gray-500 dark:text-gray-400">
                        <p>Couldn't load bonding tips. Try spending time with {{ cat.name }} - every interaction counts!</p>
                    </div>
                </div>
            </div>

            <!-- Journey Steps -->
            <div class="space-y-4">
                <h3 class="text-lg font-bold text-gray-800 dark:text-white">Your Journey</h3>

                <!-- Step 1: Bond -->
                <div class="relative pl-8 pb-8 border-l-4 {{ cat.bondingLevel >= 30 ? 'border-green-400' : 'border-gray-300 dark:border-gray-600' }}">
                    <div class="absolute -left-3 top-0 w-6 h-6 rounded-full {{ cat.bondingLevel >= 30 ? 'bg-green-400' : 'bg-gray-300 dark:bg-gray-600' }} flex items-center justify-center">
                        {% if cat.bondingLevel >= 30 %}
                        <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                        </svg>
                        {% else %}
                        <span class="text-xs text-white font-bold">1</span>
                        {% endif %}
                    </div>
                    <div class="bg-gray-50 dark:bg-gray-700/50 rounded-lg p-4">
                        <h4 class="font-bold text-gray-800 dark:text-white">Build a Bond (30%)</h4>
                        <p class="text-sm text-gray-600 dark:text-gray-300">Interact with {{ cat.name }} - feed, pet, play, and rest together!</p>
                        {% if cat.bondingLevel < 30 %}
                        <div class="mt-2">
                            <a href="{{ path('app_cat_show', {id: cat.id}) }}" class="text-purple-600 dark:text-purple-400 font-medium text-sm hover:underline">
                                Go spend time with {{ cat.name }}
                            </a>
                        </div>
                        {% endif %}
                    </div>
                </div>

                <!-- Step 2: Quiz -->
                <div class="relative pl-8 pb-8 border-l-4 {{ cat.compatibilityScore is not null ? 'border-green-400' : 'border-gray-300 dark:border-gray-600' }}">
                    <div class="absolute -left-3 top-0 w-6 h-6 rounded-full {{ cat.compatibilityScore is not null ? 'bg-green-400' : 'bg-gray-300 dark:bg-gray-600' }} flex items-center justify-center">
                        {% if cat.compatibilityScore is not null %}
                        <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                        </svg>
                        {% else %}
                        <span class="text-xs text-white font-bold">2</span>
                        {% endif %}
                    </div>
                    <div class="bg-gray-50 dark:bg-gray-700/50 rounded-lg p-4">
                        <h4 class="font-bold text-gray-800 dark:text-white">Compatibility Quiz</h4>
                        <p class="text-sm text-gray-600 dark:text-gray-300">Take a fun quiz to see how compatible you are!</p>
                        {% if cat.compatibilityScore is not null %}
                        <p class="text-sm text-green-600 dark:text-green-400 mt-2">
                            Score: {{ cat.compatibilityScore }}% - {{ cat.compatibilityLabel }}
                        </p>
                        {% else %}
                        <div class="mt-2">
                            <a href="{{ path('app_cat_quiz', {id: cat.id}) }}" class="inline-flex items-center px-4 py-2 bg-purple-500 hover:bg-purple-600 text-white rounded-lg text-sm font-medium transition-colors">
                                Take Quiz
                            </a>
                        </div>
                        {% endif %}
                    </div>
                </div>

                <!-- Step 3: Foster -->
                <div class="relative pl-8 pb-8 border-l-4 {{ cat.fostered ? 'border-green-400' : 'border-gray-300 dark:border-gray-600' }}">
                    <div class="absolute -left-3 top-0 w-6 h-6 rounded-full {{ cat.fostered ? 'bg-green-400' : 'bg-gray-300 dark:bg-gray-600' }} flex items-center justify-center">
                        {% if cat.fostered %}
                        <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                        </svg>
                        {% else %}
                        <span class="text-xs text-white font-bold">3</span>
                        {% endif %}
                    </div>
                    <div class="bg-gray-50 dark:bg-gray-700/50 rounded-lg p-4">
                        <h4 class="font-bold text-gray-800 dark:text-white">Foster Trial</h4>
                        <p class="text-sm text-gray-600 dark:text-gray-300">Start fostering to see how life with {{ cat.name }} would be!</p>
                        {% if cat.fostered %}
                        <p class="text-sm text-green-600 dark:text-green-400 mt-2">
                            Fostering since {{ cat.fosteredAt|date('F j, Y') }}!
                        </p>
                        {% elseif canFoster %}
                        <form action="{{ path('app_cat_foster', {id: cat.id}) }}" method="POST" class="mt-2">
                            <button type="submit" class="inline-flex items-center px-4 py-2 bg-green-500 hover:bg-green-600 text-white rounded-lg text-sm font-medium transition-colors">
                                Start Fostering
                            </button>
                        </form>
                        {% else %}
                        <p class="text-sm text-gray-500 dark:text-gray-400 mt-2">Complete the steps above first</p>
                        {% endif %}
                    </div>
                </div>

                <!-- Step 4: Strong Bond -->
                <div class="relative pl-8 pb-8 border-l-4 {{ cat.bondingLevel >= 50 ? 'border-green-400' : 'border-gray-300 dark:border-gray-600' }}">
                    <div class="absolute -left-3 top-0 w-6 h-6 rounded-full {{ cat.bondingLevel >= 50 ? 'bg-green-400' : 'bg-gray-300 dark:bg-gray-600' }} flex items-center justify-center">
                        {% if cat.bondingLevel >= 50 %}
                        <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                        </svg>
                        {% else %}
                        <span class="text-xs text-white font-bold">4</span>
                        {% endif %}
                    </div>
                    <div class="bg-gray-50 dark:bg-gray-700/50 rounded-lg p-4">
                        <h4 class="font-bold text-gray-800 dark:text-white">Strong Bond (50%)</h4>
                        <p class="text-sm text-gray-600 dark:text-gray-300">Build an even stronger connection during fostering!</p>
                    </div>
                </div>

                <!-- Step 5: Adopt! -->
                <div class="relative pl-8">
                    <div class="absolute -left-3 top-0 w-6 h-6 rounded-full {{ cat.adopted ? 'bg-green-400' : 'bg-gray-300 dark:bg-gray-600' }} flex items-center justify-center">
                        {% if cat.adopted %}
                        <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                        </svg>
                        {% else %}
                        <span class="text-xs text-white font-bold">5</span>
                        {% endif %}
                    </div>
                    <div class="bg-gradient-to-r from-orange-50 to-amber-50 dark:from-orange-900/30 dark:to-amber-900/30 rounded-lg p-4 border-2 border-orange-200 dark:border-orange-800">
                        <h4 class="font-bold text-gray-800 dark:text-white flex items-center">
                            <span class="text-xl mr-2">üè†</span>
                            Forever Home!
                        </h4>
                        <p class="text-sm text-gray-600 dark:text-gray-300">Officially adopt {{ cat.name }} into your family!</p>
                        {% if canAdopt %}
                        <form action="{{ path('app_cat_adopt_new', {id: cat.id}) }}" method="POST" class="mt-3">
                            <button type="submit"
                                    onclick="return confirm('Are you ready to give {{ cat.name }} their forever home?')"
                                    class="w-full bg-gradient-to-r from-orange-500 to-amber-500 hover:from-orange-600 hover:to-amber-600 text-white font-bold py-3 px-6 rounded-lg transition-all flex items-center justify-center space-x-2 shadow-lg hover:shadow-xl">
                                <span class="text-xl">üè†</span>
                                <span>Adopt {{ cat.name }}!</span>
                            </button>
                        </form>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
